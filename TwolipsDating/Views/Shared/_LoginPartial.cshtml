@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-user fa-lg"></i>&nbsp;&nbsp;@User.Identity.GetUserName()<span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li>
                        <a href="@Url.Action("index", "profile", new { id = (int?)null })">
                            <i class="fa fa-user fa-lg fa-fw"></i> My Profile
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("achievements", "profile", new { id = (int?)null })">
                            <i class="fa fa-trophy fa-lg fa-fw"></i> My Achievements
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("index", "manage", new { id = (int?)null })">
                            <i class="fa fa-cogs fa-lg fa-fw"></i> My Settings
                        </a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="#" data-toggle="modal" data-target="#modalReferAFriend" data-keyboard="true">
                            <i class="fa fa-share fa-lg fa-fw"></i> Refer a Friend
                        </a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="#" title="Log out" onclick="document.getElementById('logoutForm').submit()">
                            <i class="fa fa-sign-out fa-lg fa-fw"></i> Log out
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="@Url.Action("register", "account")" id="registerLink" title="You know you want to">
                <i class="fa fa-home fa-lg"></i>&nbsp;&nbsp;Sign up
            </a>
        </li>
        <li>
            <a href="@Url.Action("login", "account")" id="loginLink" title="Your friends are waiting for you">
                <i class="fa fa-sign-in fa-lg"></i>&nbsp;&nbsp;Log in
            </a>
        </li>
    </ul>
}
