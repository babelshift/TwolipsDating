@model TwolipsDating.ViewModels.DropDownMenuViewModel
@using TwolipsDating.ViewModels
<div class="btn-group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        @if (Model.ActiveMenuText == ActiveMenuText.Home)
        {
            <i class="glyphicon glyphicon-home"></i>
        }
        else if (Model.ActiveMenuText == ActiveMenuText.Message)
        {
            <i class="glyphicon glyphicon-envelope"></i>
        }
        else if (Model.ActiveMenuText == ActiveMenuText.Profile)
        {
            <i class="glyphicon glyphicon-user"></i>
        }
        else if (Model.ActiveMenuText == ActiveMenuText.Account)
        {
            <i class="glyphicon glyphicon-cog"></i>
        }
        else if (Model.ActiveMenuText == ActiveMenuText.Store)
        {
            <i class="glyphicon glyphicon-blackboard"></i>
        }
        else if (Model.ActiveMenuText == ActiveMenuText.Trivia)
        {
            <i class="glyphicon glyphicon-education"></i>
        }
        &nbsp;@Model.ActiveMenuText.ToString()&nbsp;<span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
        <li><a href="@Url.Action("index", "home")"><i class="glyphicon glyphicon-home"></i>&nbsp;Dashboard</a></li>
        <li><a href="@Url.Action("index", "profile", new { id = (int?)null })"><i class="glyphicon glyphicon-user"></i>&nbsp;Profile</a></li>
        <li><a href="@Url.Action("conversation", "message")"><i class="glyphicon glyphicon-envelope"></i>&nbsp;Messages</a></li>
        <li><a href="@Url.Action("index", "trivia")"><i class="glyphicon glyphicon-education"></i>&nbsp;Trivia</a></li>
        <li><a href="@Url.Action("index", "store")"><i class="glyphicon glyphicon-blackboard"></i>&nbsp;Store</a></li>
        @*
            <li><a href="#"><i class="glyphicon glyphicon-search"></i>&nbsp;Search</a></li>
            <li><a href="#"><i class="glyphicon glyphicon-tower"></i>&nbsp;Challenges</a></li>
        *@
        <li class="divider"></li>
        <li><a href="@Url.Action("index", "manage")"><i class="glyphicon glyphicon-cog"></i>&nbsp;Account</a></li>
    </ul>
</div>