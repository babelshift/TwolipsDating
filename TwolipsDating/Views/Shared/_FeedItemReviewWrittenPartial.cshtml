@model TwolipsDating.ViewModels.ReviewWrittenFeedViewModel

@if (!String.IsNullOrEmpty(Model.AuthorProfileImagePath))
{
    <div class="circular-image-wrapper">
        <img class="circular-image" src="@Model.AuthorProfileImagePath" />
    </div>
}
<p style="display: inline-block; vertical-align: top; margin-bottom: 0; margin-top: 4px;">
    <a href="@Url.Action("index", "profile", new { id = Model.AuthorProfileId })">@Model.AuthorUserName</a> writes about
</p>
@if (!String.IsNullOrEmpty(Model.TargetProfileImagePath))
{
    <div class="circular-image-wrapper">
        <img class="circular-image" src="@Model.TargetProfileImagePath" />
    </div>
}
<p style="display: inline-block; vertical-align: top; margin-bottom: 0; margin-top: 4px;">
    <a href="@Url.Action("index", "profile", new { id = Model.TargetProfileId })">@Model.TargetUserName</a>
    <small>
        &nbsp;&bull;&nbsp;
        @for (int i = 1; i <= Model.ReviewRatingValue; i++)
        {
            <i class="glyphicon glyphicon-star"></i>
        }
        @for (int j = 1; j <= 5 - Model.ReviewRatingValue; j++)
        {
            <i class="glyphicon glyphicon-star-empty"></i>
        }
        &nbsp;&bull;&nbsp;&nbsp;@Model.TimeAgo
    </small>
</p>
<p style="margin-top: 5px; " class="pull-right">
    <a href="#" id="@String.Format("share-profile-link-{0}", Model.TargetProfileId)" class="label label-primary"
       data-trigger="focus" data-html="true" data-toggle="popover" data-placement="bottom">
        <i class="glyphicon glyphicon-share-alt"></i>&nbsp;Share
    </a>
    &nbsp;
    <a href="#" class="label label-default"><i class="glyphicon glyphicon-alert"></i>&nbsp;Report</a>
</p>
<div id="@String.Format("share-profile-buttons-popover-{0}", Model.TargetProfileId)" class="hide">
    <div class="share-buttons">
        <a href="@("https://www.facebook.com/dialog/share?app_id=742385919135029&display=popup&href=" + Url.Action("index", "profile", new { id = Model.TargetProfileId }, Request.Url.Scheme) + "&redirect_uri=" + Url.Action("index", "profile", new { id = Model.TargetProfileId }, Request.Url.Scheme))"
           onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;">
            <img src="~/Content/fb_16.png" alt="Share on Facebook" />
        </a>
        <a href="@("https://twitter.com/intent/tweet?text=" + Url.Encode(String.Format("{0} just reviewed {1}", Model.AuthorUserName, Model.TargetUserName)) + "&url=" + Url.Action("index", "profile", new { id = Model.TargetProfileId }, Request.Url.Scheme))"
           onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=350,width=600');return false;">
            <img src="~/Content/bird_blue_16.png" alt="Tweet" />
        </a>
        <a href="@("https://plus.google.com/share?url=" + Url.Action("index", "profile", new { id =  Model.TargetProfileId }, Request.Url.Scheme))"
           onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;">
            <img src="~/Content/gplus-16.png" alt="Share on Google+" />
        </a>
    </div>
</div>
<div class="clearfix"></div>
<div class="well well-sm">
    <small>@Model.ReviewContent</small>
</div>