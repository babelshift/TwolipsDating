                    <img alt="twolips dating" src="~/Content/twolipsicon-white-180x180.png" width="32" height="32" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                @*@@if (User.Identity.IsAuthenticated)
                    {
                        using (Html.BeginForm("index", "search", FormMethod.Get, new { @class = "navbar-form navbar-left", role = "search" }))
                        {
                            <div class="input-group">
