    <meta property="og:url" content="@Request.Url.AbsoluteUri" />
    <meta property="og:title" content="@ViewBag.Title" />
    <meta property="og:description" content="@ViewBag.Description" />
    <meta property="og:image" content="@ViewBag.ImageUrl" />
    <meta property="og:site_name" content="Twolips Dating Community" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" style="padding-top: 7px;" href="@Url.Action("index", "home")">
                    <img alt="twolips dating" src="~/Content/twolipsicon-white.png" width="32" height="32" />
                </a>
                @if (User.Identity.IsAuthenticated)
                {
                    using (Html.BeginForm("index", "search", FormMethod.Get, new { @class = "navbar-form navbar-left", role = "search" }))
                    {
                        <div class="input-group">
                            @Html.TextBox("user", null, new { @id = "searchUserName", @class = "form-control", @placeholder = "Find someone..." })
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-sm btn-default" style="line-height: 1.4"><i class="glyphicon glyphicon-search"></i></button>
                            </span>
                        </div>
                    }
                }
            </div>
