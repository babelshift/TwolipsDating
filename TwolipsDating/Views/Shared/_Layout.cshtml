    <script src="@Url.Content("~/Scripts/analytics.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Shared/layout.js")" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
