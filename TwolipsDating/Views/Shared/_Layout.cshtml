    <!-- End Google Tag Manager -->
    <div class="navbar navbar-inverse" role="navigation" style="box-shadow: 0 2px 3px 1px rgba(0, 0, 0, 0.25) ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" style="padding-top: 7px;" href="@Url.Action("index", "home")">
                    <img alt="twolips dating" src="~/Content/twolipsicon-white-32x32.png" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul id="navbar-main" class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("quick", "profile")" data-placement="bottom" data-container="body" class="custom-tooltip" title="Flip through matches">
                            <i class="fa fa-bolt fa-lg fa-fw"></i> <span class="hidden-sm">QuickMatch</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("index", "search")" data-placement="bottom" data-container="body" class="custom-tooltip" title="Browse all people">
                            <i class="fa fa-heart fa-lg fa-fw"></i> <span class="hidden-sm">Browse</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("index", "trivia")" data-placement="bottom" data-container="body" class="custom-tooltip" title="Earn points and achievements">
                            <i class="fa fa-mortar-board fa-lg fa-fw"></i>
                            <span class="hidden-sm">Trivia</span>
                            @if (ViewBag.ShowNewTriviaText != null && ViewBag.ShowNewTriviaText)
                            {
                                <div class="fa-overlay-top-left-small">
                                    New
                                </div>
                            }
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("index", "store")" data-placement="bottom" data-container="body" class="custom-tooltip" title="Spend your points">
                            <i class="fa fa-shopping-cart fa-lg fa-fw"></i>
                            <span class="hidden-sm">Store</span>
                            @if (ViewBag.ShowStoreSaleText != null && ViewBag.ShowStoreSaleText)
                            {
                                <div class="fa-overlay-top-left-small">
                                    Sale
                                </div>
                            }
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("index", "tags")" data-placement="bottom" data-container="body" class="custom-tooltip" title="Find people by tag">
                            <i class="fa fa-tags fa-lg fa-fw"></i> <span class="hidden-sm">Tags</span>
                        </a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (ViewBag.PointsCount != null)
                        {
                            <li>
                                <a href="@Url.Action("points", "account")" data-placement="bottom" data-container="body" class="custom-tooltip" title="View your points">
                                    <i class="fa fa-star fa-lg fa-fw"></i> <span id="span-points-count">@ViewBag.PointsCount</span>
                                </a>
                            </li>
                        }
                        if (ViewBag.MessageNotificationCount != null)
                        {
                            <li>
                                <a href="@Url.Action("conversation", "message")" data-placement="bottom" data-container="body" class="custom-tooltip" title="View your conversations">
                                    <i class="fa fa-envelope fa-lg fa-fw"></i>
                                    <span class="hidden-sm hidden-md hidden-lg">Conversations</span>
                                    @if (ViewBag.MessageNotificationCount > 0)
                                    {
                                        <div class="fa-overlay-top-right">
                                            @ViewBag.MessageNotificationCount
                                        </div>
                                    }
                                </a>
                            </li>
                        }

                        if (ViewBag.NotificationCount != null)
                        {
                            <li>
                                <a href="@Url.Action("notifications", "home")" title="View your notifications" data-placement="bottom" data-container="body" class="custom-tooltip">
                                    <i class="fa fa-bell fa-lg fa-fw"></i>
                                    <span class="hidden-sm hidden-md hidden-lg">Notifications</span>
                                    @if (ViewBag.NotificationCount > 0)
                                    {
                                        <div class="fa-overlay-top-right">
                                            <span id="span-gift-notification-count">@ViewBag.NotificationCount</span>
                                        </div>
                                    }
                                </a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>

    @if (User.Identity.IsAuthenticated && ViewBag != null)
    {
        <div id="popover-gifts-content" class="hide">
            <div id="popover-gifts-container" class="custom-popover-content popover-scroll">
                @if (ViewBag.GiftsReceived != null && ViewBag.GiftsReceived.Count > 0)
                {
                    <p class="pull-left"><a href="@Url.Action("index", "profile", new { tab = "inventory" })">View inventory</a></p>
                    <p class="pull-right">
                        <a href="#" class="remove-all-gift-notifications">Remove all</a>
                    </p>
                    <div class="clearfix"></div>
                    for (int i = 0; i < ViewBag.GiftsReceived.Count; i++)
                    {
                        var gift = ViewBag.GiftsReceived[i];
                        <div id="@String.Format("gift-notification-{0}", gift.GiftTransactionId)">
                            @if (!String.IsNullOrEmpty(gift.SenderProfileImagePath))
                            {
                                <div class="circular-image-wrapper">
                                    <img class="circular-image" src="@gift.SenderProfileImagePath" />
                                </div>
                            }
                            <p style="display: inline-block; vertical-align: top; margin-bottom: 0; margin-top: 5px; max-width: 90px" class="overflow-ellipsis">
                                <a href="@Url.Action("index", "profile", new { id = gift.SenderProfileId })">@gift.SenderUserName</a>
                            </p>
                            <div class="circular-image-wrapper">
                                <img class="circular-image" src="@gift.GiftImagePath" />
                            </div>
                            <p style="display: inline-block; vertical-align: top; margin-bottom: 0; margin-top: 5px;">
                                <span class="label label-default">@gift.GiftAmount</span>
                            </p>
                            <p style="margin-top: 7px;" class="pull-right">
                                <a href="#" data-transaction-id="@gift.GiftTransactionId" title="Remove notification" class="remove-gift-notification">
                                    <i class="glyphicon glyphicon-remove"></i>
                                </a>
                            </p>
                            <div class="clearfix"></div>
                            <small>@gift.DateTransaction</small>
                            @if (i < ViewBag.GiftsReceived.Count - 1)
                            {
                                <hr />
                            }
                        </div>
                    }
                }
                else
                {
                    <p>Nothing to see here.</p>
                }
            </div>
        </div>
        <div id="popover-announcements-content" class="hide">
            <div id="popover-announcements-container" class="custom-popover-content">
                @if (ViewBag.Announcements != null && ViewBag.Announcements.Count > 0)
                {
                    for (int i = 0; i < ViewBag.Announcements.Count; i++)
                    {
                        var announcement = ViewBag.Announcements[i];
                        if (i == 0)
                        {
                            <p><i class="glyphicon glyphicon-info-sign"></i> @announcement.Content</p>
                        }
                        else
                        {
                            <p><i class="glyphicon glyphicon-info-sign"></i> @announcement.Content</p>
                        }
                    }
                }
                else
                {
                    <p>Nothing to see here!</p>
                }
            </div>
        </div>
    }
    <div class="container body-content">
        @if (HttpContext.Current.AreAdsEnabled())
        {
            <div class="row">
                <div class="col-xs-12">
                    <div id="adblocker-warning" class="hidden alert alert-danger alert-dismissable" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h5 style="margin: 0">
                            You seem to be using an adblocker. I know ads are annoying, but did you know this site is being developed by only a single person?
                            If you are having fun around here, consider disabling your adblock for this domain. It would really help me out. Thanks!
                        </h5>
                    </div>
                </div>
            </div>
        }
        @RenderBody()
    </div>
    <div class="footer">
        @Html.Partial("_FooterPartial")
    </div>
    @RenderSection("modals", required: false)
    <div class="modal fade" id="modalReferAFriend" tabindex="-1" role="dialog" aria-labelledby="modalReferAFriendLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="modalReferAFriendLabel"><i class="fa fa-share fa-lg fa-fw"></i> Refer a Friend</h4>
                </div>
                <div class="modal-body text-center">
                    <h3>Referrals give you and a friend rewards!</h3>
                    <h4>Give this code to a friend</h4>
                    <div class="row">
                        <div class="col-sm-6 col-sm-offset-3">
                            <div class="form-group">
                                <input id="referral-code" type="text" class="form-control" value="HD27SAj2" style="text-align: center" />
                                <small class="help-block">Your friend will use this at registration</small>
                            </div>
                        </div>
                    </div>
                    <h4>Or give this link to a friend</h4>
                    <div class="row">
                        <div class="col-sm-10 col-sm-offset-1">
                            <input id="referral-link" type="text" class="form-control" value="https://twolipsdating.com/account/register?code=HD27SAj2" style="text-align: center" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
