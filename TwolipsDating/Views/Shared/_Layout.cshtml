    <script type="text/javascript">
    $(document).delegate('*[data-toggle="lightbox"]', 'click', function (event) { event.preventDefault(); $(this).ekkoLightbox(); });

    var isScrolledDown = false;

    $(document).ready(function () {
        var announcementPopover = $('#popover-announcements').popover({
                                    html: true,
                                    content: function () {
                                        return $("#popover-announcements-content").html();
                                    }
                                });
        $('#popover-announcements').on("click", function (e) {
            e.preventDefault();
        });

        $(document).on("click", function (e) {
            var isAnnouncementPopover = $(e.target).is(announcementPopover) || $(e.target).closest('#popover-announcements').length > 0;
            var inAnnouncementPopover = $(e.target).closest('.popover').length > 0;
            if (!isAnnouncementPopover && !inAnnouncementPopover) {
                announcementPopover.popover('hide');
            }
        });

        var giftPopover = $('#popover-gifts').popover({
                            html: true,
                            content: function () {
                                return $("#popover-gifts-content").html();
                            }
                        });
        $('#popover-gifts').on("click", function (e) {
            e.preventDefault();
        });

        $(document).on("click", function (e) {
            var isGiftPopover = $(e.target).is(giftPopover) || $(e.target).closest('#popover-gifts').length > 0;
            var inGiftPopover = $(e.target).closest('.popover').length > 0;
            if (isGiftPopover == false && inGiftPopover == false) {
                giftPopover.popover('hide');
            }
        });

        $("#popover-gifts").on("hidden.bs.popover", function () {
            $('#popover-gifts').popover({
                html: true,
                content: function () {
                    return $("#popover-gifts-content").html();
                }
            });
        });

