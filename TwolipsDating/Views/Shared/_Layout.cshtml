                <ul id="navbar-main" class="nav navbar-nav visible-md visible-lg">
                    <li><a href="@Url.Action("index", "tags")"><i class="glyphicon glyphicon-tags"></i>&nbsp;&nbsp;Tags</a></li>
                    <li><a href="@Url.Action("index", "search", new { id = (int?)null })"><i class="glyphicon glyphicon-search"></i>&nbsp;&nbsp;Search</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="glyphicon glyphicon-education"></i>&nbsp;&nbsp;Trivia <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("index", "trivia")"><i class="glyphicon glyphicon-dashboard"></i>&nbsp;&nbsp;Dashboard</a></li>
                            <li><a href="@Url.Action("random", "trivia")"><i class="glyphicon glyphicon-random"></i>&nbsp;&nbsp;Random</a></li>
                            <li><a href="@Url.Action("timed", "trivia")"><i class="glyphicon glyphicon-time"></i>&nbsp;&nbsp;Timed</a></li>
                        </ul>
                    </li>
                    <li><a href="@Url.Action("index", "store")"><i class="glyphicon glyphicon-shopping-cart"></i>&nbsp;&nbsp;Store</a></li>
                </ul>
                <ul id="navbar-main" class="nav navbar-nav visible-xs visible-sm">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="glyphicon glyphicon-search"></i>&nbsp;&nbsp;Explore <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("index", "tags")"><i class="glyphicon glyphicon-tags"></i>&nbsp;&nbsp;Tags</a></li>
                            <li><a href="@Url.Action("index", "search")"><i class="glyphicon glyphicon-search"></i>&nbsp;&nbsp;Search</a></li>
                            <li><a href="@Url.Action("conversation", "message")"><i class="glyphicon glyphicon-envelope"></i>&nbsp;&nbsp;Messages</a></li>
                            <li><a href="@Url.Action("index", "trivia")"><i class="glyphicon glyphicon-education"></i>&nbsp;&nbsp;Trivia</a></li>
                            <li><a href="@Url.Action("index", "store")"><i class="glyphicon glyphicon-shopping-cart"></i>&nbsp;&nbsp;Store</a></li>
                            <li><a href="@Url.Action("points", "account")"><i class="glyphicon glyphicon-piggy-bank"></i>&nbsp;&nbsp;Points</a></li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a href="@Url.Action("points", "account")" title="Points">
                                <i class="glyphicon glyphicon-piggy-bank"></i>&nbsp;&nbsp;<span id="span-points-count">@ViewBag.PointsCount</span>
                            </a>
                        </li>
                        <li style="background: @(ViewBag.MessageNotificationCount > 0 ? "#e55f00" : String.Empty)">
                            <a href="@Url.Action("conversation", "message")" title="Unread messages">
                                <i class="glyphicon glyphicon-envelope"></i>&nbsp;&nbsp;@ViewBag.MessageNotificationCount
                            </a>
                        </li>
                        <li style="background: @(ViewBag.GiftNotificationCount > 0 ? "#e55f00" : String.Empty)">
                            <a id="popover-gifts" href="#" title="Received Gifts" data-placement="bottom" data-container="body" data-animation="false">
                                <i class="glyphicon glyphicon-gift"></i>&nbsp;&nbsp;<span id="span-gift-notification-count">@ViewBag.GiftNotificationCount</span>&nbsp;<span class="caret"></span>
                            </a>
                            <input id="gift-notification-count" type="hidden" value="@ViewBag.GiftNotificationCount" />
                        </li>
                        <li style="background: @(ViewBag.AnnouncementNotificationCount > 0 ? "#e55f00" : String.Empty)">
                            <a id="popover-announcements" href="#" title="Announcements" data-toggle="popover" data-placement="bottom" data-container="body" data-animation="false">
                                <i class="glyphicon glyphicon-bullhorn"></i>&nbsp;&nbsp;@ViewBag.AnnouncementNotificationCount&nbsp;<span class="caret"></span>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    @if (User.Identity.IsAuthenticated && ViewBag != null)
    {
        <div id="popover-gifts-content" class="hide">
            <div id="popover-gifts-container" class="custom-popover-content popover-scroll">
                @if (ViewBag.GiftsReceived != null && ViewBag.GiftsReceived.Count > 0)
                {
                    <p class="pull-left"><a href="@Url.Action("index", "profile", new{ tab = "inventory" })">View inventory</a></p>
                    <p class="pull-right">
                        <a href="#" class="remove-all-gift-notifications">Remove all</a>
                    </p>
                    <div class="clearfix"></div>
                    for (int i = 0; i < ViewBag.GiftsReceived.Count; i++)
                    {
                        var gift = ViewBag.GiftsReceived[i];
                        <div id="@String.Format("gift-notification-{0}", gift.GiftTransactionId)">
                            @if (!String.IsNullOrEmpty(gift.SenderProfileImagePath))
                            {
                                <div class="circular-image-wrapper">
                                    <img class="circular-image" src="@gift.SenderProfileImagePath" />
                                </div>
                            }
                            <p style="display: inline-block; vertical-align: top; margin-bottom: 0; margin-top: 5px; max-width: 90px" class="overflow-ellipsis">
                                <a href="@Url.Action("index", "profile", new { id = gift.SenderProfileId })">@gift.SenderUserName</a>
                            </p>
                            <div class="circular-image-wrapper">
                                <img class="circular-image" src="@gift.GiftImagePath" />
                            </div>
                            <p style="display: inline-block; vertical-align: top; margin-bottom: 0; margin-top: 5px;">
                                <span class="label label-default">@gift.GiftAmount</span>
                            </p>
                            <p style="margin-top: 7px;" class="pull-right">
                                <a href="#" data-transaction-id="@gift.GiftTransactionId" title="Remove notification" class="remove-gift-notification">
                                    <i class="glyphicon glyphicon-remove"></i>
                                </a>
                            </p>
                            <div class="clearfix"></div>
                            <small>@gift.DateTransaction</small>
                            @if (i < ViewBag.GiftsReceived.Count - 1)
                            {
                                <hr />
                            }
                        </div>
                    }
                }
                else
                {
                    <p>Nothing to see here.</p>
                }
            </div>
        </div>
        <div id="popover-announcements-content" class="hide">
            <div id="popover-announcements-container" class="custom-popover-content">
                @if (ViewBag.Announcements != null && ViewBag.Announcements.Count > 0)
                {
                    for (int i = 0; i < ViewBag.Announcements.Count; i++)
                    {
                        var announcement = ViewBag.Announcements[i];
                        if (i == 0)
                        {
                            <p><i class="glyphicon glyphicon-info-sign"></i> @announcement.Content</p>
                        }
                        else
                        {
                            <p><i class="glyphicon glyphicon-info-sign"></i> @announcement.Content</p>
                        }
                    }
                }
                else
                {
                    <p>Nothing to see here!</p>
                }
            </div>
        </div>
    }
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer class="footer">
        <div class="footer-bottom-social text-center">
            <div style="margin: 0 auto; width: 135px;">
                <a href="http://facebook.com/twolipsdating">
                    <img src="~/Content/fb-icon-32.png" alt="Like on Facebook" />
                </a>
                <a href="http://twitter.com/twolipsdating">
                    <img src="~/Content/tw-icon-32.png" alt="Follow on Twitter" />
                </a>
                <a href="http://plus.google.com/+twolipsdating">
                    <img src="~/Content/gp-icon-32.png" alt="Follow on Google+" />
                </a>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="footer-bottom">
            <div class="container">
                <h5 style="display: inline-block">
                    &copy; @DateTime.Now.Year
                </h5>
                <h4 style="display: inline-block">
                    <a href="@Url.Action("index", "home")"><img src="~/Content/twolipsicon-white-180x180.png" width="32" height="32" /></a> twolips dating <small>@Html.CurrentVersion()</small>
                </h4>
                <div style="margin-top: 10px" class="pull-right">
                    @Html.ActionLink("About", "index", "about")
                    <p style="display: inline-block;">&bull;</p>
                    <a href="mailto:info@twolipsdating.com">Contact</a>
                    <p style="display: inline-block;">&bull;</p>
                    @Html.ActionLink("Privacy policy", "privacy", "about")
                    <p style="display: inline-block;">&bull;</p>
                    @Html.ActionLink("Terms of service", "terms", "about")
                </div>
            </div>
        </div>
    </footer>
