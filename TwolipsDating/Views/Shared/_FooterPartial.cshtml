                        <span itemprop="name">
                            @Html.ActionLink("Terms of Service", "terms", "about", null, new { itemprop = "url" })
                        </span>
                    </div>
                    <div class="text-right text-center-xs">
                        <a href="http://facebook.com/twolipsdating" title="Like us on Facebook">
                            <span class="fa-stack fa-lg text-facebook">
                                <i class="fa fa-circle fa-stack-2x"></i>
