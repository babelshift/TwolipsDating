@using TwolipsDating.Utilities

<footer>
    <div class="footer-bottom text-center-xs">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div itemscope itemtype="http://schema.org/Organization">
                        <h4 style="margin: 0">
                            <small>&copy; @DateTime.Now.Year</small>
                            <a href="@Url.Action("index", "home")"><img src="~/Content/twolipsicon-white-180x180.png" width="32" height="32" /></a>
                            <span itemprop="name" class="hidden-xs">twolips dating</span>
                            <small>@Html.CurrentVersion()</small>
                        </h4>
                        <div itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
                            <small>
                                PO Box <span itemprop="postOfficeBoxNumber">780835</span>,
                                <span itemprop="addressLocality">Orlando, Florida</span>
                                <span itemprop="postalCode">32878</span>
                            </small>
                        </div>
                        <small><span itemprop="email">info@twolipsdating.com</span></small>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div itemscope itemtype="http://www.schema.org/SiteNavigationElement" class="text-right text-center-xs">
                        @Html.ActionLink("About", "index", "about")
