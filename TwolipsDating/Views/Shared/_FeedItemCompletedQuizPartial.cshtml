@model TwolipsDating.ViewModels.CompletedQuizFeedViewModel

<div class="feed-item-icon pull-left">
    <i class="fa fa-book fa-fw fa-lg"></i>
</div>
<div style="margin-left: 35px">
    <div class="circular-image-wrapper">
        <img class="circular-image" src="@Model.SourceProfileImagePath" />
    </div>
    <div class="feed-item-headline">
        @if (User.Identity.Name == Model.SourceUserName)
        {
            @:You
    }
        else
        {
            <a href="@Url.Action("index", "profile", new { id = Model.SourceProfileId })">@Model.SourceUserName</a>
        }
        completed
        <a href="@Url.Action("quiz", "trivia", new { id = Model.QuizId, seoName = Model.QuizSEOName })">@Model.QuizName</a>
        with a score of
        <strong>@String.Format("{0}%", Model.UserScorePercent)</strong>.
        <br />
        <small>@Model.TimeAgo</small>
    </div>
    <div class="clearfix"></div>
    <a href="@Url.Action("quiz", "trivia", new { id = Model.QuizId, seoName = Model.QuizSEOName })">
        <img src="@Model.QuizThumbnailImagePath" width="128" height="64">
    </a>
</div>