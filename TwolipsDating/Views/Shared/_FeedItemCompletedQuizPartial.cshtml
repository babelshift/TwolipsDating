@model TwolipsDating.ViewModels.CompletedQuizFeedViewModel

@if (!String.IsNullOrEmpty(Model.SourceProfileImagePath))
{
    <div class="circular-image-wrapper">
        <img class="circular-image" src="@Model.SourceProfileImagePath" />
    </div>
}
else
{
    <div class="circular-image-wrapper">
        <img class="circular-image" src="~/Content/Placeholder.png">
    </div>
}
<div class="feed-item-headline">
    <a href="@Url.Action("index", "profile", new { id = Model.SourceProfileId })">@Model.SourceUserName</a>
    completed
    <a href="@Url.Action("quiz", "trivia", new {id = Model.QuizId})">@Model.QuizName</a>
    with a score of
    <strong>@String.Format("{0}%", Model.UserScorePercent)</strong>
    <br />
    <small>@Model.TimeAgo</small>
</div>