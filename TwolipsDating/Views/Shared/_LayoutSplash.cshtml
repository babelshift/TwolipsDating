@using TwolipsDating.Utilities

<!DOCTYPE html>
<html>
<head prefix="og: http://ogp.me/ns#">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@String.Format("{0} | twolips", @ViewBag.Title)</title>
    <link rel="canonical" href="@Request.Url.AbsoluteUri" />
    <link rel="shortcut icon" href="~/Content/twolipsico.ico" type="image/x-icon">
    <meta name="description" content="@ViewBag.Description" />
    <meta property="og:image" content="@(!String.IsNullOrEmpty(ViewBag.ImageUrl) ? Url.Content(ViewBag.ImageUrl) : Request.Url.Scheme + "://" + Request.Url.Authority + Url.Content("~/Content/twolipsicon-white-200x200.png"))" />
    @{
        if (ViewBag.ImageWidth != null)
        {
            <meta property="og:image:width" content="@ViewBag.ImageWidth" />
        }
        if (ViewBag.ImageHeight != null)
        {
            <meta property="og:image:height" content="@ViewBag.ImageWidth" />
        }
    }
    <meta property="og:locale" content="en_US" />
    <meta property="og:url" content="@Request.Url.AbsoluteUri" />
    <meta property="og:title" content="@String.Format("{0} | twolips", @ViewBag.Title)" />
    <meta property="og:description" content="@ViewBag.Description" />
    <meta property="og:site_name" content="twolips dating community" />
    <meta name="google-site-verification" content="4eyILTchd7WANbxkEX7K1ZVlHy6WgoXrerg26xS8XHM" />
    <meta name="twitter:card" content="@(ViewBag.TwitterCardType != null ? ViewBag.TwitterCardType : (!String.IsNullOrEmpty(ViewBag.ImageUrl) ? "summary_large_image" : "summary"))">
    <meta name="twitter:site" content="&#64;twolipsdating">
    <meta name="twitter:title" content="@ViewBag.Title">
    <meta name="twitter:description" content="@ViewBag.Description">
    <meta name="twitter:image" content="@(!String.IsNullOrEmpty(ViewBag.ImageUrl) ? Url.Content(ViewBag.ImageUrl) : Request.Url.Scheme + "://" + Request.Url.Authority + Url.Content("~/Content/twolipsicon-white-200x200.png"))">
    @Styles.Render("~/Content/bootstrap-yeti.min.css")
    @RenderSection("styles", required: false)
    @Styles.Render("~/Content/font-awesome")
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation" style="margin-bottom: 0">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" style="padding-top: 7px;" href="@Url.Action("index", "home")">
                    <img alt="twolips dating" src="~/Content/twolipsicon-white-180x180.png" width="32" height="32" />
                </a>
                <a href="@Url.Action("index", "home")" class="navbar-brand">
                    twolips dating
                </a>
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @RenderBody()
    <footer class="footer">
        <div class="footer-bottom-social text-center">
            <div style="margin: 0 auto; width: 200px;">
                <a href="http://facebook.com/twolipsdating" title="Like us on Facebook">
                    <span class="fa-stack fa-lg text-facebook">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
                <a href="http://twitter.com/twolipsdating" title="Follow us on Twitter">
                    <span class="fa-stack fa-lg text-twitter">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-twitter fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
                <a href="http://plus.google.com/+twolipsdating" title="Follow us on Google+">
                    <span class="fa-stack fa-lg text-google-plus">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-google-plus fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
                <a href="https://instagram.com/twolipsdating/" title="Follow us on Instagram">
                    <span class="fa-stack fa-lg text-instagram">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-instagram fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="footer-bottom">
            <div class="container">
                <h5 style="display: inline-block">
                    &copy; @DateTime.Now.Year
                </h5>
                <h4 style="display: inline-block">
                    <a href="@Url.Action("index", "home")"><img src="~/Content/twolipsicon-white-180x180.png" width="32" height="32" /></a> twolips dating <small>@Html.CurrentVersion()</small>
                </h4>
                <div style="margin-top: 10px" class="pull-right">
                    @Html.ActionLink("About", "index", "about")
                    <p style="display: inline-block;">&bull;</p>
                    <a href="http://blog.twolipsdating.com">Blog</a>
                    <p style="display: inline-block;">&bull;</p>
                    <a href="mailto:info@twolipsdating.com">Contact</a>
                    <p style="display: inline-block;">&bull;</p>
                    @Html.ActionLink("Privacy policy", "privacy", "about")
                    <p style="display: inline-block;">&bull;</p>
                    @Html.ActionLink("Terms of service", "terms", "about")
                </div>
            </div>
        </div>
    </footer>
    <script type="application/ld+json">
        {
        "@@context": "https://twolipsdating.com",
        "@@type": "Company",
        "url": "@Request.Url.AbsoluteUri",
        "logo": "https://www.twolipsdating.com/Content/twolipsicon-white-200x200.png",
        "sameAs" : [
        "https://www.facebook.com/twolipsdating",
        "https://twitter.com/twolipsdating/",
        "https://plus.google.com/+Twolipsdating/"
        ]
        }
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    @if (!HttpContext.Current.IsDebuggingEnabled)
    {
        <script src="@Url.Content("~/Scripts/analytics.js")" type="text/javascript"></script>
    }
    @RenderSection("scripts", required: false)
</body>
</html>
