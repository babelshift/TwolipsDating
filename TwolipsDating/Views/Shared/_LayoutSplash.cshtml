@using TwolipsDating.Utilities

<!DOCTYPE html>
<html>
<head prefix="og: http://ogp.me/ns#">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="canonical" href="@Request.Url.AbsoluteUri" />
    <link rel="shortcut icon" href="~/Content/twolipsico.ico" type="image/x-icon">
    <meta name="description" content="@ViewBag.Description" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:url" content="@Request.Url.AbsoluteUri" />
    <meta property="og:title" content="@ViewBag.Title" />
    <meta property="og:description" content="@ViewBag.Description" />
    <meta property="og:image" content="@ViewBag.ImageUrl" />
    <meta property="og:site_name" content="twolips dating community" />
    @Styles.Render("~/Content/bootstrap-yeti.min.css")
    @Styles.Render("~/Content/jquery-ui.min.css")
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation" style="margin-bottom: 0">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" style="padding-top: 7px;" href="@Url.Action("index", "home")">
                    <img alt="twolips dating" src="~/Content/twolipsicon-white.png" width="32" height="32" />
                </a>
                <a href="@Url.Action("index", "home")" class="navbar-brand">
                    twolips dating
                </a>
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @RenderBody()
    <footer class="footer">
        <div class="footer-bottom">
            <div class="container">
                <h5 style="display: inline-block">
                    &copy; @DateTime.Now.Year
                </h5>
                <h4 style="display: inline-block">
                    <a href="@Url.Action("index", "home")"><img src="~/Content/twolipsicon-white.png" width="32" height="32" /></a> twolips dating <small>@Html.CurrentVersion()</small>
                </h4>
                <div style="margin-top: 10px;" class="pull-right">
                    @Html.ActionLink("About", "index", "about")
                    <p style="display: inline-block;">&bull;</p>
                    <a href="mailto:info@twolipsdating.com">Contact</a>
                    <p style="display: inline-block;">&bull;</p>
                    @Html.ActionLink("Privacy policy", "privacy", "about")
                    <p style="display: inline-block;">&bull;</p>
                    @Html.ActionLink("Terms of service", "terms", "about")
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/raty")
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/analytics.js")" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
