@model TwolipsDating.ViewModels.UploadedImageFeedViewModel

@if (!String.IsNullOrEmpty(Model.UploaderProfileImagePath))
{
    <div class="circular-image-wrapper">
        <img class="circular-image" src="@Model.UploaderProfileImagePath" />
    </div>
}
else
{
    <div class="circular-image-wrapper">
        <img class="circular-image" src="~/Content/Placeholder.png">
    </div>
}
<div class="feed-item-headline">
    @{
        string text = String.Empty;
        if (Model.UploadedImagesPaths.Count > 1)
        {
            text = "uploaded some images";
        }
        else
        {
            text = "uploaded an image";
        }
        <a href="@Url.Action("index", "profile", new { id = Model.UploaderProfileId })">@Model.UploaderUserName</a> @text
        <br />
        <small>@Model.TimeAgo</small>
    }
</div>
<div class="row">
    @foreach (var uploadedImage in Model.UploadedImagesPaths)
    {
        <div class="col-xs-4 col-sm-2">
            <a class="thumbnail" data-parent=".wrapper" data-toggle="lightbox" data-gallery="multiimages" href="@uploadedImage.Path" style="min-height: 90px; max-height: 90px; border: 1px; margin-bottom: 0">
                <img src="@uploadedImage.ThumbnailPath" style="max-height: 90px;">
            </a>
        </div>
    }
</div>