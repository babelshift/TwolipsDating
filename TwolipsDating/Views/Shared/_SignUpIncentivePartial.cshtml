@if (!User.Identity.IsAuthenticated)
{
    <div class="panel panel-warning text-center">
        <div class="panel-heading">
            Experience all of Twolips with a free account
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = Url.Action("index", "trivia") }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <h5>Create a dating profile, meet new friends, message others about trivia challenges, save all your trivia scores, and much more. Sign up using the buttons below.</h5>
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-block btn-facebook" id="Facebook" name="provider" value="Facebook" title="Join with Facebook">
                        <i class="fa fa-facebook fa-lg fa-fw"></i> <span class="hidden-xs">Join with Facebook</span>
                    </button>
                </div>
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-block btn-google-plus" id="Google" name="provider" value="Google" title="Sign up with Google+">
                        <i class="fa fa-google-plus fa-lg fa-fw"></i> <span class="hidden-xs">Join with Google+</span>
                    </button>
                </div>
                <div class="col-xs-4">
                    <a href="@Url.Action("register", "account")" class="btn btn-block btn-success"><i class="fa fa-envelope fa-lg fa-fw"></i> <span class="hidden-xs">Join with Email</span></a>
                </div>
                <div class="clearfix"></div>
            }
        </div>
    </div>
}
