@model TwolipsDating.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Free Dating, Games, and Trivia";
    ViewBag.Description = "Twolips is a community focused on providing people with the ability to meet likeminded friends and colleagues through a variety of activities and challenges.";
}

<div class="container-fluid" style="background: linear-gradient(#004a60, #008cba); border-bottom: 1px solid #333;">
    <div class="jumbotron">
        <div class="container">
            <div class="row" style="padding: 15px;">
                <div class="text-center">
                    <h1>The most entertaining way to meet new people and make new friends.</h1>
                    <h2>Get in free. Start a profile. Attract people. Earn, collect, and trade items.</h2>
                </div>
                <div class="col-sm-6 col-md-5 col-md-offset-1 col-lg-4 col-lg-offset-2">
                    @using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = "" }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="text-center">
                            <h3>Sign up quickly</h3>
                        </div>
                        <div class="form-group text-center">
                            <div style="margin-bottom: 10px;">
                                <button style="width: 100%;" type="submit" class="btn btn-twitter" id="Twitter" name="provider" value="Twitter" title="Sign up with Twitter">
                                    <span class="fa-stack">
                                        <i class="fa fa-circle fa-stack-2x"></i>
                                        <i class="fa fa-twitter fa-stack-1x fa-inverse-twitter"></i>
                                    </span>
                                    Twitter
                                </button>
                            </div>
                            <div style="margin-bottom: 10px;">
                                <button style="width: 100%;" type="submit" class="btn btn-facebook" id="Facebook" name="provider" value="Facebook" title="Sign up with Facebook">
                                    <span class="fa-stack">
                                        <i class="fa fa-circle fa-stack-2x"></i>
                                        <i class="fa fa-facebook fa-stack-1x fa-inverse-facebook"></i>
                                    </span>
                                    Facebook
                                </button>
                            </div>
                            <button style="width: 100%;" type="submit" class="btn btn-google-plus" id="Google" name="provider" value="Google" title="Sign up with Google+">
                                <span class="fa-stack">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-google-plus fa-stack-1x fa-inverse-google-plus"></i>
                                </span>
                                Google+
                            </button>
                            <small>We don't post anything without your permission.</small>
                        </div>
                    }
                </div>
                <div class="col-sm-6 col-md-5 col-lg-4">
                    <div class="text-center">
                        <h3>Or create an account</h3>
                    </div>
                    @using (Html.BeginForm("register", "account", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-lg fa-user fa-fw"></i></div>
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Enter a profile name" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-lg fa-lock fa-fw"></i></div>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter a password" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-lg fa-envelope fa-fw"></i></div>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter your email address" })
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">
                                Sign up for twolips dating
                            </button>
                        </div>
                        <small>By clicking "Sign up for Twolips Dating", you are agreeing to the @Html.ActionLink("Terms of Service", "terms", "about") and @Html.ActionLink("Privacy Policy", "privacy", "about").</small>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container" style="padding-top: 25px; padding-bottom: 25px">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default">
                <div class="panel-body" style="margin: 15px">
                    <div class="row">
                        <div class="col-sm-7">
                            <h3 class="text-primary" style="margin-top: 5px"><i class="glyphicon glyphicon-user"></i> Profiles &amp; Friends</h3>
                            <h4><i class="glyphicon glyphicon-chevron-right"></i> Customize your profile with images, tags, titles, and reviews.</h4>
                            <h4><i class="glyphicon glyphicon-chevron-right"></i> Display unique titles that you've earned.</h4>
                            <h4><i class="glyphicon glyphicon-chevron-right"></i> Raise your profile rank by being a positive influence.</h4>
                        </div>
                        <div class="col-sm-5 text-center">
                            <img src="~/Content/TabletImage1.png" />
                        </div>
                    </div>
                    <div class="row" style="margin-top: 40px">
                        <div class="col-sm-5 text-center">
                            <img src="~/Content/CellPhoneImage1.png" />
                        </div>
                        <div class="col-sm-7">
                            <h3 class="text-primary" style="margin-top: 5px"><i class="glyphicon glyphicon-education"></i> Trivia &amp; Games</h3>
                            <h4><i class="glyphicon glyphicon-chevron-right"></i> Answer trivia questions and complete quizzes to earn points.</h4>
                            <h4><i class="glyphicon glyphicon-chevron-right"></i> Show off your knowledge by earning profile various tags.</h4>
                            <h4><i class="glyphicon glyphicon-chevron-right"></i> Prove to others that you have a certain knowledge skillset.</h4>
                            <h4><i class="glyphicon glyphicon-chevron-right"></i> Get matched with potential friends based on your actual knowledge and actions.</h4>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 40px">
                        <div class="col-sm-7">
                            <h3 class="text-primary" style="margin-top: 5px"><i class="glyphicon glyphicon-search"></i> Search &amp; Match</h3>
                            <h4><i class="glyphicon glyphicon-chevron-right"></i> Find others based on their awarded and suggested tags.</h4>
                            <h4><i class="glyphicon glyphicon-chevron-right"></i> Interested in people who have earned the 'intellectual' tag and the 'creative' tag? Search for it!</h4>
                            <h4><i class="glyphicon glyphicon-chevron-right"></i> Improve a friend's search results by suggesting relevant tags for their profile.</h4>
                        </div>
                        <div class="col-sm-5 text-center">
                            <img src="~/Content/MonitorImage1.png" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid" style="background-color: #fff; padding-top: 50px; padding-bottom: 125px">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="text-center">
                    <h1>Get Started Now</h1>
                </div>
                <div class="col-md-6 col-md-offset-1">
                    <h3><i class="glyphicon glyphicon-chevron-right"></i> <a href="@Url.Action("register", "account")">Sign up</a> through Twitter, Facebook, Google+, or by creating a twolips account.</h3>
                    <h3><i class="glyphicon glyphicon-chevron-right"></i> To get started, provide us with what you are, how old you are, and where you live.</h3>
                    <h3><i class="glyphicon glyphicon-chevron-right"></i> Consider being a bit silly with what you are. Are you an Ogre? How about a Robot? Or maybe just a simple Man.</h3>
                </div>
                <div class="col-md-4">
                    <img src="~/Content/SplashHowTo1.png" style="border: 1px solid #ccc; border-radius: 10px; box-shadow: 0 5px 5px rgba(0, 0, 0, 0.15); max-width: 100%" />
                </div>
                <div class="col-md-12" style="margin-top: 15px; margin-bottom: 15px">
                    <hr />
                </div>
                <div class="clearfix"></div>
                <div class="text-center">
                    <h1>Show Off Your Skills</h1>
                    <h3>The best way to match yourself with others is to engage in trivia and games to earn tags and points. Others can find you based on your actual knowledge rather than relying on vague matching algorithms.</h3>
                    <img src="~/Content/TriviaDashboard.png" style="border: 1px solid #ccc; border-radius: 10px; box-shadow: 0 5px 5px rgba(0, 0, 0, 0.15); max-width: 100%" />
                </div>
            </div>
        </div>
    </div>
</div>