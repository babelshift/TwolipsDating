@model TwolipsDating.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Free Dating, Games, and Trivia | twolips";
    ViewBag.Description = "Twolips is a community focused on providing people with the ability to meet likeminded friends and colleagues through a variety of activities and challenges.";
    ViewBag.ImageUrl = Url.Content("~/Content/twolipsicon-white-180x180.png");
}

<div class="container-fluid" style="background: linear-gradient(#004a60, #008cba); border-bottom: 1px solid #333;">
    <div class="jumbotron">
        <div class="container">
            <div class="row" style="padding: 15px;">
                <div class="text-center">
                    <h1>The most entertaining way to meet new people and make new friends.</h1>
                    <h2>Get in free. Start a profile. Attract people. Earn, collect, and trade items.</h2>
                </div>
                <div class="col-sm-6 col-md-4 col-md-offset-2">
                    @using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = "" }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="text-center">
                            <h3>Sign up quickly</h3>
                        </div>
                        <div class="form-group text-center">
                            <div style="margin-bottom: 10px;">
                                <button style="width: 100%;" type="submit" class="btn btn-info" id="Twitter" name="provider" value="Twitter" title="Log in using your Twitter account">
                                    <img src="~/Content/tw-icon-16.png" />&nbsp;&nbsp;Twitter
                                </button>
                            </div>
                            <div style="margin-bottom: 10px;">
                                <button style="width: 100%;" type="submit" class="btn btn-primary" id="Facebook" name="provider" value="Facebook" title="Log in using your Facebook account">
                                    <img src="~/Content/fb-icon-16.png" />&nbsp;&nbsp;Facebook
                                </button>
                            </div>
                            <button style="width: 100%;" type="submit" class="btn btn-danger" id="Google" name="provider" value="Google" title="Log in using your Google account">
                                <img src="~/Content/gp-icon-16.png" />&nbsp;&nbsp;Google
                            </button>
                            <small>We don't post anything without your permission</small>
                        </div>
                    }
                </div>
                <div class="col-sm-6 col-md-4">
                    <div class="text-center">
                        <h3>Or create an account</h3>
                    </div>
                    @using (Html.BeginForm("register", "account", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Choose a username" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter a password" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Your email address" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">
                                Sign up for twolips dating
                            </button>
                        </div>
                        <small>By clicking "Sign up for Twolips Dating", you are agreeing to the @Html.ActionLink("Terms of Service", "terms", "about") and @Html.ActionLink("Privacy Policy", "privacy", "about").</small>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<div class="container" style="padding-top: 50px; padding-bottom: 125px">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>An increasing and growing featureset</h1>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-body text-center">
                    <div class="marketing-panel">
                        <span class="marketing-icon"><i class="glyphicon glyphicon-log-in"></i></span>
                    </div>
                    <h3>Get in free</h3>
                    <p>
                        Tired of having to pay just to communicate with people? Sick of being nagged to purchase the privilege just to respond? You've come to the right place.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-body text-center">
                    <div class="marketing-panel">
                        <span class="marketing-icon"><i class="glyphicon glyphicon-book"></i></span>
                    </div>
                    <h3>Maintain your profile</h3>
                    <p>
                        Your profile lets others know who you are, what others have said about you, what prizes you've earned, and a lot more. Use this space to attract likeminded friends.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-body text-center">
                    <div class="marketing-panel">
                        <span class="marketing-icon"><i class="glyphicon glyphicon-comment"></i></span>
                    </div>
                    <h3>Review each other</h3>
                    <p>
                        Request a review of your profile or take the first step by offering a review of another user's profile. By participating in the community, you will earn points, gifts, and titles!
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-body text-center">
                    <div class="marketing-panel">
                        <span class="marketing-icon"><i class="glyphicon glyphicon-tags"></i></span>
                    </div>
                    <h3>Tag your friends</h3>
                    <p>
                        Tag your own profile and offer tag suggestions to other user profiles to help with matching by interests. Earn special tags through challenges and engagements.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-body text-center">
                    <div class="marketing-panel">
                        <span class="marketing-icon"><i class="glyphicon glyphicon-gift"></i></span>
                    </div>
                    <h3>Collect items</h3>
                    <p>
                        Participating in certain activities with other users can earn you gifts, emojis, and titles to decorate your profile. Trade gifts with others to win over your friends!
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-body text-center">
                    <div class="marketing-panel">
                        <span class="marketing-icon"><i class="glyphicon glyphicon-stats"></i></span>
                    </div>
                    <h3>Show off your stats</h3>
                    <p>
                        Your community accomplishments can easily be displayed, searched, and shown off in many different ways. Share your achievements with the rest of the community.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
