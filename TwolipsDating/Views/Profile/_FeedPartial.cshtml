@model IReadOnlyCollection<TwolipsDating.ViewModels.ProfileFeedViewModel>

@foreach (var feedItem in Model)
{
    if (feedItem.UploadedImagesPaths != null && feedItem.UploadedImagesPaths.Count > 0)
    {
        <div class="circular-image-wrapper">
            <img class="circular-image" src="@feedItem.OriginatorProfileImagePath" />
        </div>
        <p style="display: inline-block; vertical-align: top; margin-bottom: 0; margin-top: 4px;">
            <a href="#">@feedItem.OriginatorUserName</a> uploaded some pictures &bull; <small>@feedItem.TimeAgo</small>
        </p>
        <div class="row">
            @foreach (var userImagePath in feedItem.UploadedImagesPaths)
            {
                <div class="col-xs-4 col-md-2">
                    <a href="#" class="thumbnail">
                        <img src="@userImagePath" style="max-height: 128px;">
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="circular-image-wrapper">
            <img class="circular-image" src="@feedItem.OriginatorProfileImagePath" />
        </div>
        <p style="display: inline-block; vertical-align: top; margin-bottom: 0; margin-top: 4px;">
            <a href="#">@feedItem.OriginatorUserName</a> writes about
        </p>
        <div class="circular-image-wrapper">
            <img class="circular-image" src="@feedItem.TargetProfileImagePath" />
        </div>
        <p style="display: inline-block; vertical-align: top; margin-bottom: 0; margin-top: 4px;">
            <a href="#">@feedItem.TargetUserName</a>
            <small>
                &nbsp;&bull;&nbsp;
                @for (int i = 1; i <= feedItem.ReviewRatingValue; i++)
                {
                    <i class="glyphicon glyphicon-star"></i>
                }
                @for (int j = 1; j <= 5 - feedItem.ReviewRatingValue; j++)
                {
                    <i class="glyphicon glyphicon-star-empty"></i>
                }
                &nbsp;&bull;&nbsp;&nbsp;@feedItem.TimeAgo
            </small>
        </p>
        <p style="margin-top: 5px; " class="pull-right">
            <a href="#" class="label label-primary"><i class="glyphicon glyphicon-share-alt"></i>&nbsp;Share</a>
            <a href="#" class="label label-default"><i class="glyphicon glyphicon-alert"></i>&nbsp;Report</a>
        </p>
        <div class="clearfix"></div>
        <div class="well well-sm">
            <small>@feedItem.ReviewContent</small>
        </div>
    }
}