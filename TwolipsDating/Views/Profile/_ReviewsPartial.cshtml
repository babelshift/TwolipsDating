@model IReadOnlyCollection<TwolipsDating.ViewModels.ReviewViewModel>

@foreach (var review in Model)
{
    <p style="margin-bottom: 0"><a href="#">@review.AuthorUserName</a></p>
    <small>
        @for (int i = 1; i <= review.RatingValue; i++)
        {
            <i class="glyphicon glyphicon-star"></i>
        }
        @for (int j = 1; j <= 5 - review.RatingValue; j++)
        {
            <i class="glyphicon glyphicon-star-empty"></i>
        }
        &nbsp;&bull;&nbsp;@review.TimeAgo
    </small>
    <p style="margin-bottom: 5px;" class="pull-right">
        <a href="#" class="label label-primary"><i class="glyphicon glyphicon-share-alt"></i>&nbsp;Share</a>
        <a href="#" class="label label-default"><i class="glyphicon glyphicon-alert"></i>&nbsp;Report</a>
    </p>
    <div class="clearfix"></div>
    <div class="well well-sm">
        <small>@review.Content</small>
    </div>
}