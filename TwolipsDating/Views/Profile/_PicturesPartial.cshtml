@model TwolipsDating.ViewModels.UploadImageViewModel

@if (Model.ProfileUserId == Model.CurrentUserId)
{
    using (Html.BeginForm("uploadimage", "profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary()
        <div class="row">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-btn">
                        <span class="btn btn-default btn-file">
                            <i class="glyphicon glyphicon-folder-open"></i>&nbsp;&nbsp;Browse... @Html.TextBoxFor(x => x.UploadedImage, new { type = "file" })
                        </span>
                    </span>
                    <input type="text" class="form-control" readonly>
                </div>
            </div>
            <div class="col-md-3">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-upload"></i>&nbsp;Upload</button>
            </div>
        </div>
    }
    <br />
}
<div class="row">
    @foreach(var userImage in Model.UserImages)
    {
        <div class="col-xs-6 col-md-3">
            <a data-toggle="lightbox" href="@userImage.Path" class="thumbnail" style="min-height: 128px; max-height: 128px;">
                <img src="@userImage.Path" style="max-height: 118px;">
            </a>
        </div>
    }
</div>