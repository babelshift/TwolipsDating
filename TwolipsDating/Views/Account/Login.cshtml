@using TwolipsDating.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login and Find Your Match";
    ViewBag.Description = "Twolips Dating allows you to login with your specific user account or several external services such as Google+, Twitter, and Facebook.";
}

<div class="center-block">
    <div class="row">
        <div class="col-lg-5 col-lg-offset-4">
            <section id="loginForm">
                <div class="panel panel-default">
                    <div class="panel-body">
                        @using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="text-center">
                                <h4>Sign in quickly</h4>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-4">
                                        <button style="width: 100%;" type="submit" class="btn btn-default" id="Twitter" name="provider" value="Twitter" title="Log in using your Twitter account">
                                            <img src="~/Content/bird_blue_16.png" />&nbsp;&nbsp;Twitter
                                        </button>
                                    </div>
                                    <div class="col-md-4">
                                        <button style="width: 100%;" type="submit" class="btn btn-default" id="Facebook" name="provider" value="Facebook" title="Log in using your Facebook account">
                                            <img src="~/Content/fb_16.png" />&nbsp;&nbsp;Facebook
                                        </button>
                                    </div>
                                    <div class="col-md-4">
                                        <button style="width: 100%;" type="submit" class="btn btn-default" id="Google" name="provider" value="Google" title="Log in using your Google account">
                                            <img src="~/Content/gplus-16.png" />&nbsp;&nbsp;Google
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="text-center">
                            <h4>Or use your twolips account</h4>
                        </div>
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary()
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Your username" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Your password" })
                            </div>
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                            <button type="submit" class="btn btn-default btn-sm">Sign me in</button>
                            <br />
                            <ul class="list-unstyled">
                                <li><small>@Html.ActionLink("I forgot my password", "forgotpassword", "account")</small></li>
                                <li><small>@Html.ActionLink("I don't have an account", "register", "account")</small></li>
                            </ul>
                        }
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}