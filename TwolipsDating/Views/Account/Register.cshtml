@using TwolipsDating.Models;
@model TwolipsDating.Models.RegisterViewModel
@{
    ViewBag.Title = "Register and sign up for free";
    ViewBag.Description = "Twolips dating is a community focused on providing people with the ability to meet likeminded friends and colleagues through a variety of activities and challenges.";
}

<div class="row">
    <div class="col-sm-6 col-md-5 col-lg-4 col-md-offset-1 col-lg-offset-2">
        <div class="panel panel-default">
            <div class="panel-body">
                @using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = "" }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="text-center">
                        <h3>Sign up quickly</h3>
                    </div>
                    <div class="form-group text-center">
                        <div style="margin-bottom: 10px;">
                            <button style="width: 100%;" type="submit" class="btn btn-info" id="Twitter" name="provider" value="Twitter" title="Log in using your Twitter account">
                                <img src="~/Content/tw-icon-16.png" />&nbsp;&nbsp;Twitter
                            </button>
                        </div>
                        <div style="margin-bottom: 10px;">
                            <button style="width: 100%;" type="submit" class="btn btn-primary" id="Facebook" name="provider" value="Facebook" title="Log in using your Facebook account">
                                <img src="~/Content/fb-icon-16.png" />&nbsp;&nbsp;Facebook
                            </button>
                        </div>
                        <button style="width: 100%;" type="submit" class="btn btn-danger" id="Google" name="provider" value="Google" title="Log in using your Google account">
                            <img src="~/Content/gp-icon-16.png" />&nbsp;&nbsp;Google
                        </button>
                        <small>We don't post anything without your permission.</small>
                    </div>
                }
                <div class="text-center">
                    <h3>Or create a twolips account</h3>
                </div>
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><i class="glyphicon glyphicon-user"></i></div>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Enter a profile name" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></div>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter a password" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></div>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter your email address" })
                        </div>
                        <p><small>You will sometimes receive communication related to your account. According to our privacy policy, we will not share your information with anyone.</small></p>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block">
                            Sign up for twolips dating
                        </button>
                    </div>
                    <small>By clicking "Sign up for Twolips Dating", you are agreeing to the @Html.ActionLink("Terms of Service", "terms", "about") and @Html.ActionLink("Privacy Policy", "privacy", "about").</small>
                }
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-5 col-lg-4">
        <div class="panel panel-default">
            <div class="panel-body">
                <img src="~/Content/green-talk-icon-72.png" />
                <h3 class="text-success" style="display: inline-block">Profiles &amp; Friends</h3>
                <h5><i class="glyphicon glyphicon-chevron-right"></i> Customize your profile with images, tags, titles, and positive reviews.</h5>
                <h5><i class="glyphicon glyphicon-chevron-right"></i> Display unique titles that you earned with points or as rewards from challenges.</h5>

                <img src="~/Content/green-star-icon-72.png" />
                <h3 class="text-success" style="display: inline-block">Trivia &amp; Games</h3>
                <h5><i class="glyphicon glyphicon-chevron-right"></i> Earn points by answering questions correctly and completing quizzes.</h5>
                <h5><i class="glyphicon glyphicon-chevron-right"></i> Show off your knowledge by earning profile tags based on the questions you answer.</h5>
                <h5><i class="glyphicon glyphicon-chevron-right"></i> Get matched with potential friends based on your actual knowledge.</h5>

                <img src="~/Content/green-search-icon-72.png" />
                <h3 class="text-success" style="display: inline-block">Search &amp; Match</h3>
                <h5><i class="glyphicon glyphicon-chevron-right"></i> Find others based on their awarded and suggested tags.</h5>
                <h5><i class="glyphicon glyphicon-chevron-right"></i> Interested in people who have earned the 'intellectual' tag and the 'creative' tag? Search for it!</h5>
                <h5><i class="glyphicon glyphicon-chevron-right"></i> Improve a friend's search results by suggesting relevant tags for their profile.</h5>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
