@model TwolipsDating.ViewModels.QuestionViewModel

@{
    ViewBag.Title = "twolips - answering a random question";
    ViewBag.Description = Model != null && Model.Content != null ? Model.Content : "An error occurred while loading the question";
    ViewBag.ImageUrl = Url.Content("~/Content/twolipsicon-white-180x180.png");
}

<div class="panel panel-default">
    <div class="panel-body">
        @Html.Partial("_DropDownMenuPartial", new TwolipsDating.ViewModels.DropDownMenuViewModel() { ActiveMenuText = TwolipsDating.ViewModels.ActiveMenuText.Trivia })
        <div class="pull-right">
            <ul class="nav nav-pills">
                <li role="presentation" class="active">
                    <a href="@Url.Action("random", "trivia")" title="Answer random questions"><i class="glyphicon glyphicon-random"></i>&nbsp;Random</a>
                </li>
                <li role="presentation">
                    <a href="@Url.Action("timed", "trivia")" title="Answer timed questions"><i class="glyphicon glyphicon-time"></i>&nbsp;Timed</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    Create your own questions
                </h4>
            </div>
            <div class="panel-body">
                Do you have ideas for some good trivia questions? <a href="mailto:info@twolipsdating.com">Contact us</a> to let us know about them. If we approve, you'll see your questions here soon!
            </div>
        </div>
        @*@Html.Partial("_SidebarAdvertisementPartial")*@
        @if (Model != null)
        {
            @Html.Partial("_SidebarOthersAnsweredCorrectlyPartial", Model.UsersAnsweredCorrectly)
        }
    </div>
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-body">
                <div id="alert-box" class="alert alert-info">
                    <h4>Select an answer and then press OK. There is no time limit.</h4>
                </div>
                @Html.Partial("_QuestionAndAnswerPartial")
            </div>
        </div>
    </div>
</div>

@if (Model != null)
{
    <div id="share-question-popover" class="hide">
        <div class="share-buttons">
            <a href="@("https://www.facebook.com/dialog/share?app_id=742385919135029&display=popup&href=" + Url.Action("index", "trivia", null, Request.Url.Scheme) + "&redirect_uri=" + Url.Action("index", "trivia", null, Request.Url.Scheme))"
               onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;">
                <img src="~/Content/fb_16.png" alt="Share on Facebook" />
            </a>
            <a href="@("https://twitter.com/intent/tweet?text=" + Url.Encode(String.Format("{0} {1}", Model.Content, "#trivia")) + "&url=" + Url.Action("index", "trivia", null, Request.Url.Scheme))"
               onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=350,width=600');return false;">
                <img src="~/Content/bird_blue_16.png" alt="Tweet" />
            </a>
            <a href="@("https://plus.google.com/share?url=" + Url.Action("index", "trivia", null, Request.Url.Scheme))"
               onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;">
                <img src="~/Content/gplus-16.png" alt="Share on Google+" />
            </a>
        </div>
    </div>
}

@section Scripts {
    <script src="@Url.Content("~/Scripts/Trivia/random.js")" type="text/javascript"></script>
}
