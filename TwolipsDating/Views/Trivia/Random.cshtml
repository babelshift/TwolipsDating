@model TwolipsDating.ViewModels.QuestionViewModel

@{
    ViewBag.Title = "twolips - random trivia";
}

<div class="panel panel-default">
    <div class="panel-body">
        @Html.Partial("_DropDownMenuPartial", new TwolipsDating.ViewModels.DropDownMenuViewModel() { ActiveMenuText = TwolipsDating.ViewModels.ActiveMenuText.Trivia })
        <div class="pull-right">
            <h4>You're answering a random question</h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    Create your own questions
                </h4>
            </div>
            <div class="panel-body">
                Do you have ideas for some good trivia questions? <a href="mailto:info@twolipsdating.com">Contact us</a> to let us know about them. If we approve, you'll see your questions here soon!
            </div>
        </div>
        @Html.Partial("_SidebarAdvertisementPartial")
    </div>
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-body">
                @if (Model != null)
                {
                    <div id="alert-box" class="alert alert-info">
                        <h4>Select an answer and then press OK. There is no time limit.</h4>
                    </div>
                    <p>@Model.Content</p>
                    foreach (var answer in @Model.Answers)
                    {
                        <div class="radio">
                            <label>
                                @Html.RadioButtonFor(m => m.SelectedAnswerId, answer.AnswerId)
                                @answer.Content
                            </label>
                        </div>
                    }
                    <button id="button-ok" type="button" class="btn btn-primary btn-sm" onclick="onSubmitAnswer(event, this)" title="Submit answer"><i class="glyphicon glyphicon-ok"></i> OK</button>
                    <a id="button-next" href="@Url.Action("random", "trivia")" class="btn btn-primary btn-sm hidden" title="Get next question"><i class="glyphicon glyphicon-random"></i> Next</a>
                    @Html.HiddenFor(m => m.QuestionId)
                }
                else
                {
                    <h4>You're a machine. You've answered every random question we have.</h4>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="@Url.Content("~/Scripts/Trivia/random.js")" type="text/javascript"></script>
}
