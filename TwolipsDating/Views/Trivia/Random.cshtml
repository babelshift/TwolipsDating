@model TwolipsDating.ViewModels.QuestionViewModel

@{
    ViewBag.Title = "Random question";
    ViewBag.Description = Model != null && Model.Content != null ? Model.Content : "An error occurred while loading the question";
}

@Html.Partial("_ModalQuestionViolationPartial", Model)

<div class="row">
    <div class="col-md-8">
        <div class="panel panel-default">
            @Html.Partial("_QuestionAndAnswerPartial", Model)
        </div>
        <div class="ad">
            <!-- Random Question - Footer - 1 -->
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="ca-pub-1823005717277864"
                 data-ad-slot="2343303036"
                 data-ad-format="auto"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>
    </div>
    <div class="col-md-4">
        @if (Model != null && !String.IsNullOrEmpty(Model.Content))
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <i class="glyphicon glyphicon-scale"></i> Difficulty rating
                        <small>
                            <i title="Answering this question correctly will award points based on difficulty"
                               class="custom-tooltip glyphicon glyphicon-info-sign"></i>
                        </small>
                    </h4>
                </div>
                @if (Model != null)
                {
                    <div class="panel-body">
                        @Html.Partial("_QuestionRatingBarPartial", Model.Points)
                    </div>
                }
            </div>
        }
        @if (Model.Tags != null)
        {
            @Html.Partial("_SidebarTagsForQuestion", Model.Tags)
        }
        <div class="ad">
            <!-- Random Question - Sidebar - 1 -->
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="ca-pub-1823005717277864"
                 data-ad-slot="4195139430"
                 data-ad-format="auto"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>
        @if (Model.UsersAnsweredCorrectly != null)
        {
            @Html.Partial("_SidebarOthersAnsweredCorrectlyPartial", Model.UsersAnsweredCorrectly)
        }
    </div>
</div>

@section Scripts {
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <script src="@Url.Content("~/Scripts/Trivia/random.js")" type="text/javascript"></script>
}
