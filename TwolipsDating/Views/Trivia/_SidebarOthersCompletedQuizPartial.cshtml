@model IReadOnlyCollection<TwolipsDating.ViewModels.UserCompletedQuizViewModel>

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">
            <i class="fa fa-users"></i> Recently Completed
        </h4>
    </div>
    @if (Model != null && Model.Count > 0)
    {
        <ul class="list-group">
            @foreach (var user in Model)
            {
                <li id="@String.Format("user-to-follow-{0}", user.ProfileId)" class="list-group-item user-to-follow">
                    <div style="margin-left: 55px;">
                        <a href="@Url.Action("index", "profile", new{ id = user.ProfileId })">
                            <img src="@user.ProfileImagePath">
                        </a>
                        <span class="user-to-follow-name">
                            @user.UserName
                        </span>
                        <span class="user-to-follow-details">
                            <i class="fa fa-user fa-fw"></i> @user.Age years old
                            <br />
                            @if (!String.IsNullOrEmpty(user.Location))
                            {
                                <i class="fa fa-map-marker fa-fw"></i> @user.Location
                            }
                        </span>
                    </div>

                    @if (user.IsFavoritedByCurrentUser)
                    {
                        <button id="@String.Format("button-toggle-favorite-{0}", user.ProfileId)" class="btn btn-success btn-sm custom-tooltip user-to-follow-button"
                                data-profile-id="@user.ProfileId" data-user-id="@user.UserId">
                            <i id="@String.Format("icon-toggle-favorite-{0}", user.ProfileId)" class="fa fa-check fa-lg"></i> Following
                        </button>
                    }
                    else
                    {
                        <button id="@String.Format("button-toggle-favorite-{0}", user.ProfileId)" class="btn btn-default btn-sm custom-tooltip user-to-follow-button"
                                data-profile-id="@user.ProfileId" data-user-id="@user.UserId">
                            <i id="@String.Format("icon-toggle-favorite-{0}", user.ProfileId)" class="fa fa-user-plus fa-lg"></i> Follow
                        </button>
                    }
                </li>
            }
        </ul>
    }
    else
    {
        <div class="panel-body">
            <p>No one has completed this quiz yet!</p>
        </div>
    }
</div>
