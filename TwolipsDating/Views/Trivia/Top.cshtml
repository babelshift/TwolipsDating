@model TwolipsDating.ViewModels.TriviaTopPlayersViewModel
@{
    ViewBag.Title = "Top performing people";
    ViewBag.Description = "twolips dating is a community focused on providing people with the ability to meet likeminded friends and colleagues through a variety of activities and challenges.";
}
@if (!HttpContext.Current.IsDebuggingEnabled)
{
}
else
{
    <div style="width: 610px; margin: 5px auto;">
        <img src="http://placehold.it/600x90" />
    </div>
}
<div class="row">
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-body">
                <ul class="nav nav-pills quiz-categories">
                    <li role="presentation"><a href="@Url.Action("index", "trivia", new { id = (int?)null })"><i class="fa fa-rocket fa-lg fa-fw"></i> <span class="hidden-xs">Featured</span></a></li>
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-sitemap fa-lg fa-fw"></i> <span class="hidden-xs">Categories</span> <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            @foreach (var category in Model.QuizCategories)
                            {
                                <li role="presentation">
                                    <a href="@Url.Action("category", "trivia", new { id = category.QuizCategoryId })">
                                        <i class="fa @category.QuizIcon fa-lg fa-fw"></i>
                                        @category.QuizName
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>
                    <li role="presentation" class="active"><a href="@Url.Action("top", "trivia")"><i class="fa fa-star fa-lg fa-fw"></i> <span class="hidden-xs">Top Players</span></a></li>
                    <li class="dropdown" role="presentation">
                        <a href="#" aria-controls="dropdowncontents" data-toggle="dropdown">
                            <i class="fa fa-question-circle fa-lg"></i> <span class="hidden-xs">Questions</span> <span class="caret"></span>
                        </a>
                        <ul id="dropdowncontents" class="dropdown-menu">
                            <li>
                                <a href="@Url.Action("random", "trivia")">
                                    <i class="fa fa-random fa-lg fa-fw"></i> Random
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("timed", "trivia")">
                                    <i class="fa fa-clock-o fa-lg fa-fw"></i> Timed
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.Partial("_SignUpIncentivePartial")
                <h3>Top Performing Players</h3>
                <hr />
                @foreach (var player in Model.Players)
                {
                    <div class="col-xs-6 col-sm-3 col-md-4" style="margin-bottom: 15px;">
                        <div class="top-player">
                            <div style="margin-left: 70px;">
                                <a href="@Url.Action("index", "profile", new{id = player.ProfileId})">
                                    <img src="@player.ProfileThumbnailImagePath">
                                </a>
                                <span class="top-player-name">
                                    <a href="@Url.Action("index", "profile", new{id = player.ProfileId})">@player.UserName</a>
                                </span>
                                <span class="top-player-details">
                                    <i class="fa fa-user fa-fw"></i> @player.Age years old
                                    <br />
                                    <i class="fa fa-map-marker fa-fw"></i> @player.Location
                                    <br />
                                    <i class="fa fa-money fa-fw"></i> @player.LifeTimePoints points
                                </span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-4 col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading text-center">
                <h4 class="panel-title"><i class="fa fa-line-chart fa-lg fa-fw"></i> Trending Now</h4>
            </div>
            <div class="list-group">
                @foreach (var quiz in Model.TrendingQuizzes)
                {
                    <a style="font-size: 13px" class="list-group-item" href="@Url.Action("quiz", "trivia", new { id = quiz.QuizId })">
                        @if (quiz.PercentageOfTrending > 50)
                        {
                            <i class="text-danger fa fa-fire fa-lg fa-fw"></i>
                        }
                        else
                        {
                            <i class="text-warning fa fa-fire fa-lg fa-fw"></i>
                        }
                        @quiz.QuizName
                    </a>
                }
            </div>
        </div>
    </div>
    @if (!HttpContext.Current.IsDebuggingEnabled)
    {
    }
    else
    {
        <div class="text-center" style="margin: 5px auto;">
            <img src="http://placehold.it/350x250" />
        </div>
    }
    <div class="col-md-4 col-sm-6">
        @if (Model.RecentlyCompletedQuizzes != null && Model.RecentlyCompletedQuizzes.Count > 0)
        {
            <div class="panel panel-default recently-completed-quizzes">
                <div class="panel-heading text-center">
                    <h4 class="panel-title"><i class="fa fa-feed fa-lg fa-fw"></i> Recent Activity</h4>
                </div>
                <div class="list-group">
                    @foreach (var quiz in Model.RecentlyCompletedQuizzes)
                    {
                        <a href="@Url.Action("index", "profile", new { id = quiz.ProfileId })" class="list-group-item" style="padding: 5px 10px">
                            <span class="badge" style="margin-top: 17px">@quiz.TimeAgo</span>
                            @Html.Partial("_ProfileImagePartial", quiz.ProfileImagePath)
                            <div class="profile-info-wrapper">
                                <span class="name-and-location">
                                    @quiz.UserName
                                </span>
                                <br />
                                <span style="color: #999">@quiz.QuizName</span>
                                <br />
                                <span style="color: #999">Score: @String.Format("{0}%", @quiz.UserScorePercent)</span>
                            </div>
                        </a>
                    }
                </div>
                <div class="panel-footer text-center">
                    <a href="@Url.Action("index", "search")"><small>Find more people</small></a>
                </div>
            </div>
        }
    </div>
    <div class="col-md-4 col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading text-center">
                <h4 class="panel-title"><i class="fa fa-bolt fa-lg fa-fw"></i> Most Popular</h4>
            </div>
            <div class="list-group">
                @foreach (var quiz in Model.PopularQuizzes)
                {
                    <a style="font-size: 13px" class="list-group-item" href="@Url.Action("quiz", "trivia", new { id = quiz.QuizId })">
                        <span class="badge">@quiz.CompletedCount</span>
                        @quiz.QuizName
                    </a>
                }
            </div>
        </div>
    </div>
    @if (!HttpContext.Current.IsDebuggingEnabled)
    {
    }
    else
    {
        <div class="text-center" style="margin: 5px auto;">
            <img src="http://placehold.it/350x250" />
        </div>
    }
</div>
@section Scripts {
    @if (!HttpContext.Current.IsDebuggingEnabled)
    {
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    }
}