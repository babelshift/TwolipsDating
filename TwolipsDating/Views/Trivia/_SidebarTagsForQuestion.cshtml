@model IReadOnlyCollection<TwolipsDating.ViewModels.TagViewModel>

@if (Model != null && Model.Count > 0)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <i class="glyphicon glyphicon-tags"></i> Related tags
                <small>
                    <i title="Answering this question correctly will count towards these tags"
                       class="custom-tooltip glyphicon glyphicon-info-sign"></i>
                </small>
            </h4>
        </div>
        <div class="panel-body">
            <div class="tags">
                @foreach (var tag in Model)
                {
                    <a href="@Url.Action("index", "search", new { tags = tag.Name })" class="custom-tooltip btn btn-default btn-xs" title="search profiles tagged with '@tag.Name'">
                        @tag.Name
                    </a>
                }
            </div>
        </div>
    </div>
}