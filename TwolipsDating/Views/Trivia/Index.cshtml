@model TwolipsDating.ViewModels.TriviaDashboardViewModel
@{
    ViewBag.Title = "Trivia and quizzes";
    ViewBag.Description = "twolips dating is a community focused on providing people with the ability to meet likeminded friends and colleagues through a variety of activities and challenges.";
}
@if (!HttpContext.Current.IsDebuggingEnabled)
{
    <div class="ad">
        <!-- TriviaDashboard - Middle - 1 -->
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-1823005717277864"
             data-ad-slot="1241673033"
             data-ad-format="auto"></ins>
        <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
    </div>
}
else
{
    <div style="width: 610px; margin: 5px auto;">
        <img src="http://placehold.it/600x90" />
    </div>
}
<div class="row">
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-body">
                <ul class="nav nav-pills quiz-categories">
                    <li role="presentation" class="active"><a href="@Url.Action("index", "trivia", new { id = (int?)null })"><i class="fa fa-rocket fa-lg fa-fw"></i> <span class="hidden-xs">Featured</span></a></li>
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-sitemap fa-lg fa-fw"></i> <span class="hidden-xs">Categories</span> <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            @foreach (var category in Model.QuizCategories)
                            {
                                <li role="presentation">
                                    <a href="@Url.Action("category", "trivia", new { id = category.QuizCategoryId })">
                                        <i class="fa @category.QuizIcon fa-lg fa-fw"></i>
                                        @category.QuizName
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>
                    <li role="presentation"><a href="@Url.Action("top", "trivia")"><i class="fa fa-star fa-lg fa-fw"></i> <span class="hidden-xs">Top Players</span></a></li>
                    <li class="dropdown" role="presentation">
                        <a href="#" aria-controls="dropdowncontents" data-toggle="dropdown">
                            <i class="fa fa-question-circle fa-lg"></i> <span class="hidden-xs">Questions</span> <span class="caret"></span>
                        </a>
                        <ul id="dropdowncontents" class="dropdown-menu">
                            <li>
                                <a href="@Url.Action("random", "trivia")">
                                    <i class="fa fa-random fa-lg fa-fw"></i> Random
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("timed", "trivia")">
                                    <i class="fa fa-clock-o fa-lg fa-fw"></i> Timed
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.Partial("_SignUpIncentivePartial")
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active">
                        <a href="#daily" aria-controls="daily" role="tab" data-toggle="tab">
                            <i class="fa fa-calendar fa-lg"></i> <span class="hidden-xs">Daily Trivia</span>
                        </a>
                    </li>
                    <li role="presentation">
                        <a href="#new" aria-controls="new" role="tab" data-toggle="tab">
                            <i class="fa fa-asterisk fa-lg"></i> <span class="hidden-xs">New</span>
                        </a>
                    </li>
                    <li role="presentation">
                        <a href="#unfinished" aria-controls="unfinished" role="tab" data-toggle="tab">
                            <i class="fa fa-file-text-o fa-lg"></i> <span class="hidden-xs">Unplayed</span>
                        </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active quiz-list" id="daily">
                        @foreach (var daysAgo in Model.DailyQuizzes.Keys)
                        {
                            var quizList = Model.DailyQuizzes[daysAgo];
                            var dayAgo = DateTime.Today.AddDays(daysAgo * -1);

                            if (daysAgo == 0)
                            {
                                <h3>Today's Quizzes <small>@dayAgo.ToString("MMMM dd")</small></h3>
                            }
                            else if (daysAgo == 1)
                            {
                                <h3>Yesterday's Quizzes <small>@dayAgo.ToString("MMMM dd")</small></h3>
                            }
                            else if (daysAgo >= 2)
                            {
                                <h3>@String.Format("{0}'s Quizzes", dayAgo.DayOfWeek.ToString()) <small>@dayAgo.ToString("MMMM d")</small></h3>
                            }
                            <hr />
                            foreach (var quiz in quizList)
                            {
                                <div class="row quiz-item">
                                    <div class="col-xs-4">
                                        <a href="@Url.Action("quiz", new { id = quiz.Id })">
                                            <img class="pull-left img-responsive" src="@quiz.ThumbnailImagePath" alt="@quiz.Name">
                                        </a>
                                    </div>
                                    <div class="col-xs-8">
                                        <h4 class="quiz-title">
                                            <a href="@Url.Action("quiz", new { id = quiz.Id })">@quiz.Name</a>
                                        </h4>
                                        <p>
                                            <a class="label label-info">@quiz.QuizCategoryName.ToUpper()</a>
                                            @if (quiz.IsComplete)
                                            {
                                                <span class="label label-success">COMPLETED</span>
                                            }
                                            else
                                            {
                                                if (quiz.AveragePoints > 0)
                                                {
                                                    @Html.Partial("_QuizRatingBarPartial", quiz.AveragePoints)
                                                }
                                                else
                                                {
                                                    <span class="label label-danger">NOT RATED</span>
                                                }
                                            }
                                        </p>
                                        <p class="quiz-description">@quiz.Description</p>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                    <div role="tabpanel" class="tab-pane" id="new">
                        @foreach (var quiz in Model.NewQuizzes)
                        {
                            <div class="row" style="margin-bottom: 25px">
                                <div class="col-xs-4">
                                    <a href="@Url.Action("quiz", new { id = quiz.Id })">
                                        <img class="pull-left img-responsive" src="@quiz.ThumbnailImagePath" alt="@quiz.Name">
                                    </a>
                                </div>
                                <div class="col-xs-8">
                                    <h4 style="margin-top: 0; margin-bottom: 5px; font-weight: 400">
                                        <a href="@Url.Action("quiz", new { id = quiz.Id })">@quiz.Name</a>
                                    </h4>
                                    <p>
                                        <a class="label label-info">@quiz.QuizCategoryName.ToUpper()</a>
                                        @if (quiz.IsComplete)
                                        {
                                            <span class="label label-success">COMPLETED</span>
                                        }
                                        else
                                        {
                                            if (quiz.AveragePoints > 0)
                                            {
                                                @Html.Partial("_QuizRatingBarPartial", quiz.AveragePoints)
                                            }
                                            else
                                            {
                                                <span class="label label-danger">NOT RATED</span>
                                            }
                                        }
                                    </p>
                                    <p style="font-weight: 300">@quiz.Description</p>
                                </div>
                            </div>
                        }
                    </div>
                    <div role="tabpanel" class="tab-pane" id="unfinished">
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (Model.UnfinishedQuizzes != null && Model.UnfinishedQuizzes.Count > 0)
                            {
                                foreach (var quiz in Model.UnfinishedQuizzes)
                                {
                                    <div class="row" style="margin-bottom: 25px">
                                        <div class="col-xs-4">
                                            <a href="@Url.Action("quiz", new { id = quiz.Id })">
                                                <img class="pull-left img-responsive" src="@quiz.ThumbnailImagePath" alt="@quiz.Name">
                                            </a>
                                        </div>
                                        <div class="col-xs-8">
                                            <h4 style="margin-top: 0; margin-bottom: 5px; font-weight: 400">
                                                <a href="@Url.Action("quiz", new { id = quiz.Id })">@quiz.Name</a>
                                            </h4>
                                            <p>
                                                <a class="label label-info">@quiz.QuizCategoryName.ToUpper()</a>
                                                @if (quiz.IsComplete)
                                                {
                                                    <span class="label label-success">COMPLETED</span>
                                                }
                                                else
                                                {
                                                    if (quiz.AveragePoints > 0)
                                                    {
                                                        @Html.Partial("_QuizRatingBarPartial", quiz.AveragePoints)
                                                    }
                                                    else
                                                    {
                                                        <span class="label label-danger">NOT RATED</span>
                                                    }
                                                }
                                            </p>
                                            <p style="font-weight: 300">@quiz.Description</p>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <h4>You have finished every quiz we have!</h4>
                            }
                        }
                        else
                        {
                            <h4>You can track your unfinished quiz progress by <a href="@Url.Action("registe", "account")">signing up</a>.</h4>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading text-center">
                <h4 class="panel-title"><i class="fa fa-line-chart fa-lg fa-fw"></i> Trending Now</h4>
            </div>
            <div class="list-group">
                @foreach (var quiz in Model.TrendingQuizzes)
                {
                    <a style="font-size: 13px" class="list-group-item" href="@Url.Action("quiz", "trivia", new { id = quiz.QuizId })">
                        @if (quiz.PercentageOfTrending > 50)
                        {
                            <i class="text-danger fa fa-fire fa-lg fa-fw"></i>
                        }
                        else
                        {
                            <i class="text-warning fa fa-fire fa-lg fa-fw"></i>
                        }
                        @quiz.QuizName
                    </a>
                }
            </div>
        </div>
    </div>
    @if (!HttpContext.Current.IsDebuggingEnabled)
    {
        <div class="col-md-4 col-sm-6">
            <div class="ad">
                <!-- Trivia Dashboard - Right 1 -->
                <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="ca-pub-1823005717277864"
                     data-ad-slot="3552777032"
                     data-ad-format="auto"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            </div>
        </div>
    }
    else
    {
        <div class="text-center" style="margin: 5px auto;">
            <img src="http://placehold.it/350x250" />
        </div>
    }
    <div class="col-md-4 col-sm-6">
        @if (Model.RecentlyCompletedQuizzes != null && Model.RecentlyCompletedQuizzes.Count > 0)
        {
            <div class="panel panel-default recently-completed-quizzes">
                <div class="panel-heading text-center">
                    <h4 class="panel-title"><i class="fa fa-feed fa-lg fa-fw"></i> Recent Activity</h4>
                </div>
                <div class="list-group">
                    @foreach (var quiz in Model.RecentlyCompletedQuizzes)
                    {
                        <a href="@Url.Action("index", "profile", new { id = quiz.ProfileId })" class="list-group-item" style="padding: 5px 10px">
                            <span class="badge" style="margin-top: 17px">@quiz.TimeAgo</span>
                            @Html.Partial("_ProfileImagePartial", quiz.ProfileImagePath)
                            <div class="profile-info-wrapper">
                                <span class="name-and-location">
                                    @quiz.UserName
                                </span>
                                <br />
                                <span style="color: #999">@quiz.QuizName</span>
                                <br />
                                <span style="color: #999">Score: @String.Format("{0}%", @quiz.UserScorePercent)</span>
                            </div>
                        </a>
                    }
                </div>
                <div class="panel-footer text-center">
                    <a href="@Url.Action("index", "search")"><small>Find more people</small></a>
                </div>
            </div>
        }
    </div>
    <div class="col-md-4 col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading text-center">
                <h4 class="panel-title"><i class="fa fa-bolt fa-lg fa-fw"></i> Most Popular</h4>
            </div>
            <div class="list-group">
                @foreach (var quiz in Model.PopularQuizzes)
                {
                    <a style="font-size: 13px" class="list-group-item" href="@Url.Action("quiz", "trivia", new { id = quiz.QuizId })">
                        <span class="badge">@quiz.CompletedCount</span>
                        @quiz.QuizName
                    </a>
                }
            </div>
        </div>
    </div>
    @if (!HttpContext.Current.IsDebuggingEnabled)
    {
        <div class="col-md-4 col-sm-6">
            <div class="ad">
                <!-- Trivia Dashboard - Right 2 -->
                <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="ca-pub-1823005717277864"
                     data-ad-slot="5029510239"
                     data-ad-format="auto"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            </div>
        </div>
    }
    else
    {
        <div class="text-center" style="margin: 5px auto;">
            <img src="http://placehold.it/350x250" />
        </div>
    }
</div>
@section Scripts {
    @if (!HttpContext.Current.IsDebuggingEnabled)
    {
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    }
}