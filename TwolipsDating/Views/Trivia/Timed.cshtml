@model TwolipsDating.ViewModels.QuestionViewModel

@{
    ViewBag.Title = "Timed question";
    ViewBag.Description = Model != null && Model.Content != null ? Model.Content : "An error occurred while loading the question";
    ViewBag.ImageUrl = Url.Content("~/Content/twolipsicon-white-180x180.png");
}

@Html.Partial("_ModalQuestionViolationPartial", Model)

<div class="row">
    <div class="col-md-8">
        <div class="panel panel-default">
            @Html.Partial("_QuestionAndAnswerPartial", Model)
        </div>
        <div class="ad">
            <!-- Timed Question - Footer - 1 -->
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="ca-pub-1823005717277864"
                 data-ad-slot="3680435431"
                 data-ad-format="auto"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <i class="glyphicon glyphicon-scale"></i> Difficulty rating
                    <small>
                        <i title="Answering this question correctly will award points based on difficulty"
                           class="custom-tooltip glyphicon glyphicon-info-sign"></i>
                    </small>
                </h4>
            </div>
            @if (Model != null)
            {
                <div class="panel-body">
                    @Html.Partial("_QuestionRatingBarPartial", Model.Points)
                </div>
            }
        </div>
        @if (Model.Tags != null)
        {
            @Html.Partial("_SidebarTagsForQuestion", Model.Tags)
        }
        <div class="ad">
            <!-- Timed Question - Sidebar - 1 -->
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="ca-pub-1823005717277864"
                 data-ad-slot="5671872638"
                 data-ad-format="auto"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>
        @if (Model.UsersAnsweredCorrectly != null)
        {
            @Html.Partial("_SidebarOthersAnsweredCorrectlyPartial", Model.UsersAnsweredCorrectly)
        }
    </div>
</div>

<div id="share-question-popover" class="hide">
    <div class="share-buttons custom-popover-content text-center">
        <a href="@("https://www.facebook.com/dialog/share?app_id=742385919135029&display=popup&href=" + Url.Action("index", "trivia", null, Request.Url.Scheme) + "&redirect_uri=" + Url.Action("index", "trivia", null, Request.Url.Scheme))"
           onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;">
            <img src="~/Content/fb-icon-32.png" alt="Share on Facebook" />
        </a>
        <a href="@("https://twitter.com/intent/tweet?text=" + Url.Encode(String.Format("{0} {1}", Model.Content, "#trivia")) + "&url=" + Url.Action("index", "trivia", null, Request.Url.Scheme))">
            <img src="~/Content/tw-icon-32.png" alt="Tweet" />
        </a>
        <a href="@("https://plus.google.com/share?url=" + Url.Action("index", "trivia", null, Request.Url.Scheme))"
           onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;">
            <img src="~/Content/gp-icon-32.png" alt="Share on Google+" />
        </a>
    </div>
</div>

@section Scripts {
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <script src="@Url.Content("~/Scripts/Trivia/timed.js")" type="text/javascript"></script>
}