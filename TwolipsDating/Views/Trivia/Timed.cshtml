    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        Create your own questions
                    </h4>
                </div>
                <div class="panel-body">
                    <a href="mailto:info@twolipsdating.com">Contact us</a> to suggest some new questions. You might see yours here soon!
                </div>
            </div>
            @*@Html.Partial("_SidebarAdvertisementPartial")*@
            @if (Model != null)
            {
                @Html.Partial("_SidebarOthersAnsweredCorrectlyPartial", Model.UsersAnsweredCorrectly)
            }
        </div>
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-body">
                    @if (Model != null)
                    {
                        <div id="alert-box" class="alert alert-info">
                            <h4>Select an answer and then press OK. You have <span id="timer-label">10</span> seconds remaining.</h4>
                        </div>
                        @Html.Partial("_QuestionAndAnswerPartial")
                    }
                    else
                    {
                        <h4>You're a machine. You've answered every timed question we have.</h4>
                    }
                </div>
            </div>
        </div>
    </div>

