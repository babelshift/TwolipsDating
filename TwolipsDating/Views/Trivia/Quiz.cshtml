@model TwolipsDating.ViewModels.QuizViewModel

@{
    ViewBag.Title = "twolips - quiz";
}

<div class="panel panel-default">
    <div class="panel-body">
        @Html.Partial("_DropDownMenuPartial", new TwolipsDating.ViewModels.DropDownMenuViewModel() { ActiveMenuText = TwolipsDating.ViewModels.ActiveMenuText.Trivia })
        <div class="pull-right">
            <h4>You're viewing the quiz: <strong>@Model.QuizName</strong></h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        @Html.Partial("_SidebarAdvertisementPartial")
    </div>
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-body">
                @if (Model != null && Model.Questions != null && Model.Questions.Count > 0)
                {
                    using (Html.BeginForm("quiz", "trivia", FormMethod.Post, new { role = "form" }))
                    {
                        if (Model.IsAlreadyCompleted)
                        {
                            <div id="alert-box" class="alert alert-success">
                                <h4>You've already completed this quiz. View your selected answers below.</h4>
                            </div>
                        }
                        else
                        {
                            <div id="alert-box" class="alert alert-info">
                                <h4>Select answers to all questions and then press OK. There is no time limit.</h4>
                            </div>
                        }

                        for (int i = 0; i < Model.Questions.Count; i++)
                        {
                            var question = Model.Questions[i];
                            <p>@question.Content</p>
                            foreach (var answer in question.Answers)
                            {
                                <div class="radio">
                                    <label>
                                        @if (Model.Questions[i].IsAlreadyAnswered)
                                        {
                                            @Html.RadioButtonFor(m => m.Questions[i].SelectedAnswerId, answer.AnswerId, new { disabled = "disabled" })
                                        }
                                        else
                                        {
                                            @Html.RadioButtonFor(m => m.Questions[i].SelectedAnswerId, answer.AnswerId)
                                        }
                                        @answer.Content
                                        &nbsp;&nbsp;
                                        @if (Model.Questions[i].IsAlreadyAnswered)
                                        {
                                            if (answer.IsCorrect)
                                            {
                                                <span class="label label-success">correct</span>
                                            }
                                            else
                                            {
                                                <span class="label label-danger">incorrect</span>
                                            }
                                        }
                                    </label>
                                </div>
                            }
                            @Html.HiddenFor(m => Model.Questions[i].QuestionId)
                            <hr />
                        }

                        if (!Model.IsAlreadyCompleted)
                        {
                            <button id="button-submit" type="submit" class="btn btn-primary btn-sm" onclick="onSubmitAnswer(event, this)" title="Submit answer"><i class="glyphicon glyphicon-ok"></i> OK</button>
                        }
                        @Html.HiddenFor(m => m.QuizId)
                    }
                }
                else
                {
                    <h4>Something went wrong, and the quiz can't be loaded.</h4>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="@Url.Content("~/Scripts/Trivia/quiz.js")" type="text/javascript"></script>
}