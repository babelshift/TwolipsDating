@model TwolipsDating.ViewModels.QuizViewModel

@{
    ViewBag.Title = "twolips - " + Model.QuizName;
    ViewBag.Description = "twolips dating is a community focused on providing people with the ability to meet likeminded friends and colleagues through a variety of activities and challenges.";
    ViewBag.ImageUrl = Url.Content("~/Content/twolipsicon-white-180x180.png");
}

@if (User.Identity.IsAuthenticated)
{
    <div class="modal fade" id="modalQuestionViolation" tabindex="-1" role="dialog" aria-labelledby="modalQuestionViolationLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="modalQuestionLabel">Flag a question</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.QuestionViolation.ViolationTypeId, new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.QuestionViolation.ViolationTypeId,
                                 new SelectList(Model.QuestionViolation.ViolationTypes, "Key", "Value"),
                        new { @class = "form-control", data_placeholder = "What's the problem?" })
                    </div>
                    <input type="hidden" id="selected-question-id" />
                    <div id="violation-error" class="alert alert-danger" role="alert">
                        <p id="violation-error-text">Something happened which prevented your violation from being submitted.</p>
                    </div>
                    <div id="violation-success" class="alert alert-success" role="alert">
                        <p>Thanks for the report! You won't see this question again until we review it.</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="button-violation-close" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button id="button-violation-submit" onclick="onAddQuestionViolation(event, this)" type="button" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="ad">
        <div style="margin-bottom: 21px;">
            <!-- Quiz - Top - 1 -->
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="ca-pub-1823005717277864"
                 data-ad-slot="9186755439"
                 data-ad-format="auto"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>
    </div>
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-body">
                @if (Model.Questions != null && Model.Questions.Count > 0)
                {
                    <h3>@Model.QuizName</h3>
                    <h4>@Model.QuizDescription</h4>

                    using (Html.BeginForm("quiz", "trivia", FormMethod.Post, new { role = "form" }))
                    {
                        if (User.Identity.IsAuthenticated)
                        {
                            if (Model.IsAlreadyCompleted)
                            {
                                <div id="alert-box" class="alert alert-success">
                                    <h5>You've completed this quiz. View your selected answers below.</h5>
                                </div>
                            }
                            else
                            {
                                <hr />
                            }
                        }
                        else
                        {
                            <div id="alert-box" class="alert alert-info">
                                <h5>You can complete this quiz by <a href="@Url.Action("login", "account")" class="alert-link">logging in</a>.</h5>
                            </div>
                        }

                        for (int i = 0; i < Model.Questions.Count; i++)
                        {
                            var question = Model.Questions[i];
                            <p>
                                @String.Format("{0}. {1}", i + 1, question.Content)
                                <button type="button" id="@String.Format("share-question-link-{0}", question.QuestionId)"
                                        class="share-question-link btn btn-primary btn-xs" data-question-id="@question.QuestionId"
                                        data-html="true" data-toggle="popover" data-placement="bottom" data-title="Share" data-animation="false">
                                    <i class="glyphicon glyphicon-share-alt"></i>
                                </button>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a href="#" data-toggle="modal" data-target="#modalQuestionViolation" data-question-id="@question.QuestionId" class="btn btn-default btn-xs">
                                        <i class="glyphicon glyphicon-flag"></i>
                                    </a>
                                }
                            </p>
                            foreach (var answer in question.Answers)
                            {
                                <div class="radio">
                                    <label>
                                        @if (Model.Questions[i].IsAlreadyAnswered || !User.Identity.IsAuthenticated)
                                        {
                                            @Html.RadioButtonFor(m => m.Questions[i].SelectedAnswerId, answer.AnswerId, new { disabled = "disabled" })
                                        }
                                        else
                                        {
                                            @Html.RadioButtonFor(m => m.Questions[i].SelectedAnswerId, answer.AnswerId)
                                        }
                                        @answer.Content
                                        &nbsp;&nbsp;
                                        @if (Model.Questions[i].IsAlreadyAnswered)
                                        {
                                            if (answer.IsCorrect)
                                            {
                                                <span class="label label-success">correct</span>
                                            }
                                            else
                                            {
                                                <span class="label label-danger">incorrect</span>
                                            }
                                        }
                                    </label>
                                </div>
                            }
                            @Html.HiddenFor(m => Model.Questions[i].QuestionId)
                            <div id="@String.Format("share-question-buttons-popover-{0}", question.QuestionId)" class="hide">
                                <div class="share-buttons custom-popover-content">
                                    <a href="@("https://www.facebook.com/dialog/share?app_id=742385919135029&display=popup&href=" + Url.Action("quiz", "trivia", new { id = Model.QuizId }, Request.Url.Scheme) + "&redirect_uri=" + Url.Action("quiz", "trivia", new { id = Model.QuizId }, Request.Url.Scheme))"
                                       onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;">
                                        <img src="~/Content/fb_16.png" alt="Share on Facebook" />
                                    </a>
                                    <a href="@("https://twitter.com/intent/tweet?text=" + Url.Encode(question.Content + " #trivia") + "&url=" + Url.Action("quiz", "trivia", new { id = Model.QuizId }, Request.Url.Scheme))">
                                        <img src="~/Content/bird_blue_16.png" alt="Tweet" />
                                    </a>
                                    <a href="@("https://plus.google.com/share?url=" + Url.Action("quiz", "trivia", new { id = Model.QuizId }, Request.Url.Scheme))"
                                       onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;">
                                        <img src="~/Content/gplus-16.png" alt="Share on Google+" />
                                    </a>
                                </div>
                            </div>
                            <hr />
                        }

                        if (!Model.IsAlreadyCompleted && User.Identity.IsAuthenticated)
                        {
                            <button id="button-submit" type="submit" class="btn btn-sm btn-primary">Complete Quiz</button>
                        }
                        else if (!User.Identity.IsAuthenticated)
                        {
                            <a href="@Url.Action("login", "account")" class="btn btn-primary">Log in to complete this quiz</a>
                        }
                        @Html.HiddenFor(m => m.QuizId)
                    }
                }
                else
                {
                    <h4>Something went wrong, and the quiz can't be loaded.</h4>
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <i class="glyphicon glyphicon-piggy-bank"></i> Bonus points
                    <small>
                        <i title="Completing this quiz with a high score will award bonus points"
                           class="custom-tooltip glyphicon glyphicon-info-sign"></i>
                    </small>
                </h4>
            </div>
            @if (Model != null)
            {
                <div class="panel-body">
                    @Html.Partial("_QuizRatingBarPartial", Model.AveragePoints)
                </div>
            }
        </div>
        @if (Model != null)
        {
            @Html.Partial("_SidebarTagsForQuiz", Model.Tags)
        }
        <div class="ad">
            <!-- Quiz - Sidebar - 1 -->
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="ca-pub-1823005717277864"
                 data-ad-slot="7710022230"
                 data-ad-format="auto"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>
        @if (Model != null)
        {
            @Html.Partial("_SidebarOthersCompletedQuizPartial", Model.UsersCompletedQuiz)
        }
    </div>
</div>

@section Scripts {
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <script src="@Url.Content("~/Scripts/Trivia/quiz.js")" type="text/javascript"></script>
}