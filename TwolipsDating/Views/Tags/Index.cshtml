@model IReadOnlyCollection<TwolipsDating.Models.TagAndSuggestedCount>

@{
    ViewBag.Title = "twolips - tags";
    ViewBag.Description = "twolips dating is a community focused on providing people with the ability to meet likeminded friends and colleagues through a variety of activities and challenges.";
    ViewBag.ImageUrl = Url.Content("~/Content/twolipsicon-white-180x180.png");
}
<div class="panel panel-default">
    <div class="panel-body">
        Tags are used to identify users by a variety of categories. This is helpful when you want to view users who have earned or been identified as something specific. Tags are attached to profiles when other
        users suggest those tags for a profile or when a user earns a tag through an achievement.
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            @foreach (var tag in Model)
            {
                <div class="col-xs-6 col-sm-4 col-md-3" style="height: 95px; overflow: hidden; margin-bottom: 5px">
                    <p>
                        <a id="@String.Format("popover-tag-link-{0}", tag.Name)" class="popover-tag btn btn-primary btn-xs"
                           data-tag-name="@tag.Name" data-style="no-scroll"
                           data-toggle="popover" data-placement="bottom" data-container="body" data-animation="false">
                            @tag.Name
                        </a>
                        @if (tag.SuggestedCount > 0)
                        {
                            <small style="color: #888">&times;@tag.SuggestedCount suggested</small>
                        }
                        <br />
                        <small style="color: #888">@tag.Description</small>
                    </p>
                </div>
                <div id="@String.Format("popover-tag-content-{0}", tag.Name)" class="hide">
                    <div class="custom-popover-content">
                        <p>@tag.Description</p>
                        <a href="@Url.Action("index", "search", new{ tag = tag.Name})">see profiles</a> &bull; <a href="#">see quizzes</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="@Url.Content("~/Scripts/Tags/index.js")" type="text/javascript"></script>
}
