@model IReadOnlyCollection<TwolipsDating.ViewModels.TagAndCountViewModel>

@{
    ViewBag.Title = "twolips - tags";
    ViewBag.Description = "twolips dating is a community focused on providing people with the ability to meet likeminded friends and colleagues through a variety of activities and challenges.";
    ViewBag.ImageUrl = Url.Content("~/Content/twolipsicon-white-180x180.png");
}
<div class="panel panel-default">
    <div class="panel-body">
        Tags are used to identify users by a variety of categories. This is helpful when you want to view users who have earned or been identified as something specific. Tags are attached to profiles when other
        users suggest those tags for a profile or when a user earns a tag through an achievement.
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            @foreach (var tag in Model)
            {
                <div class="col-md-3" style="min-height: 85px; overflow: hidden">
                    <p>
                        <a href="@Url.Action("index", "search", new { tag = tag.Name })" class="custom-tooltip btn btn-primary btn-xs" title="search for users tagged with '@tag.Name'" data-container="body">
                            @tag.Name
                        </a>
                        <small style="color: #888">&times;@tag.NumberOfProfilesUsing suggested</small>
                        <br />
                        <small style ="color: #888">@tag.Description</small>
                    </p>
                </div>
            }
        </div>
    </div>
</div>
