@model IReadOnlyCollection<TwolipsDating.Models.TagAndSuggestedCount>

@{
    ViewBag.Title = "All tags";
    ViewBag.Description = "Tags are used to identify users by a variety of categories. This is helpful when you want to view users who have earned or been identified as something specific. Tags are attached to profiles when other users suggest those tags for a profile or when a user earns a tag through an achievement.";
}
<div class="row">
    <div class="panel panel-default">
        <div class="panel-body">
            Tags are used as an easy way to find users based on categories. This is helpful when you want to find someone who has earned a tag that interests you. Tags are attached to profiles when other
            users suggest those tags or when a user earns a tag by participating in the community.
        </div>
    </div>
    <div class="ad">
        <!-- Tags - Top - 1 -->
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-1823005717277864"
             data-ad-slot="7334919034"
             data-ad-format="auto"></ins>
        <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            @foreach (var tag in Model)
            {
                <div class="col-xs-6 col-sm-4 col-md-3" style="height: 95px; overflow: hidden; margin-bottom: 5px">
                    <p>
                        <a id="@String.Format("popover-tag-link-{0}", tag.Name)" class="popover-tag btn btn-default btn-xs"
                           data-tag-name="@tag.Name" data-style="no-scroll"
                           data-toggle="popover" data-placement="bottom" data-container="body" data-animation="false">
                            @tag.Name
                        </a>
                        @if (tag.SuggestedCount > 0)
                        {
                            <small style="color: #888">&times;@tag.SuggestedCount suggested</small>
                        }
                        <br />
                        <small style="color: #888">@tag.Description</small>
                    </p>
                </div>
                <div id="@String.Format("popover-tag-content-{0}", tag.Name)" class="hide">
                    <div class="custom-popover-content">
                        <p>@tag.Description</p>
                        <a href="@Url.Action("index", "search", new { tags = tag.Name })">see profiles</a>
                        &bull;
                        <a href="@Url.Action("quiz", "search", new { tag = tag.Name })">see quizzes</a>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- Tags - Bottom - 1 -->
    <ins class="adsbygoogle"
         style="display:block"
         data-ad-client="ca-pub-1823005717277864"
         data-ad-slot="5880035438"
         data-ad-format="auto"></ins>
    <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
</div>

@section Scripts {
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <script src="@Url.Content("~/Scripts/Tags/index.js")" type="text/javascript"></script>
}
